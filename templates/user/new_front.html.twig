{% extends 'base_front.html.twig' %}

{% block title %}Créer un participant{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-start justify-between gap-6">
                <div>
                    <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-3">
                        <i data-lucide="user-plus" class="w-4 h-4"></i>
                        Nouveau participant
                    </div>
                    <h1 class="text-3xl md:text-4xl font-bold leading-tight">Créer un participant</h1>
                    <p class="text-muted-foreground mt-2">Ajoutez un nouveau participant à la plateforme</p>
                </div>
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary px-5 py-2.5 rounded-xl transition-all flex items-center gap-2 font-medium">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    Retour
                </a>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-accent/10 border border-border text-foreground px-4 py-3 rounded-xl mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-destructive/10 border border-border text-foreground px-4 py-3 rounded-xl mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire -->
        <div class="card rounded-2xl p-8 md:p-10">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
            
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nom -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Nom
                        </label>
                        {{ form_widget(form.nom, {'attr': {
                            'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all',
                            'placeholder': 'Entrez le nom'
                        }}) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.nom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Prénom -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Prénom
                        </label>
                        {{ form_widget(form.prenom, {'attr': {
                            'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all',
                            'placeholder': 'Entrez le prénom'
                        }}) }}
                        {% if form.prenom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.prenom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Email -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="mail" class="w-4 h-4 inline mr-2"></i>
                            Email
                        </label>
                        {{ form_widget(form.email, {'attr': {
                            'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all',
                            'placeholder': 'exemple@email.com'
                        }}) }}
                        {% if form.email.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.email.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Rôle -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="shield" class="w-4 h-4 inline mr-2"></i>
                            Rôle
                        </label>
                        {{ form_widget(form.role, {'attr': {
                            'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all',
                            'onchange': null
                        }}) }}
                        {% if form.role.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.role.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-border">
                    <button type="button" onclick="resetForm()"
                        class="px-6 py-3 rounded-xl border border-border hover:bg-muted transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="refresh-cw" class="w-5 h-5"></i>
                        Réinitialiser
                    </button>
                    <button type="submit"
                        class="btn btn-primary px-6 py-3 rounded-xl hover:shadow-lg flex items-center gap-2 font-medium">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        Créer le participant
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        <!-- Section pour créer une réunion (visible seulement pour les enseignants) -->
        <div id="teacherSection" class="hidden mt-8">
            <div class="card rounded-2xl p-8 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-primary/10 via-secondary/10 to-accent/10"></div>
                <div class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-6">
                    <div>
                        <h2 class="text-2xl font-bold mb-2 flex items-center gap-2">
                            <i data-lucide="video" class="w-6 h-6"></i>
                            Créer une réunion
                        </h2>
                        <p class="text-muted-foreground">En tant qu'enseignant, vous pouvez créer des réunions virtuelles pour vos étudiants</p>
                    </div>
                    <a href="{{ path('app_meet_new') }}" class="btn btn-primary px-6 py-3 rounded-xl transition-all font-bold shadow-lg flex items-center gap-2">
                        <i data-lucide="plus" class="w-5 h-5"></i>
                        Créer une réunion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser Lucide icons
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
