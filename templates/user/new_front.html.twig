{% extends 'base_front.html.twig' %}

{% block title %}Créer un participant{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Créer un participant</h1>
                <p class="text-muted-foreground">Ajoutez un nouveau participant à la plateforme</p>
            </div>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary px-6 py-3 rounded-xl hover:bg-secondary/90 transition-all flex items-center gap-2 font-medium border border-secondary text-secondary">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Retour
            </a>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire -->
        <div class="bg-white rounded-2xl shadow-sm border border-border p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nom -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Nom
                        </label>
                        {{ form_widget(form.nom, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'Entrez le nom'
                        }}) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.nom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Prénom -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Prénom
                        </label>
                        {{ form_widget(form.prenom, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'Entrez le prénom'
                        }}) }}
                        {% if form.prenom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.prenom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Email -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="mail" class="w-4 h-4 inline mr-2"></i>
                            Email
                        </label>
                        {{ form_widget(form.email, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'exemple@email.com'
                        }}) }}
                        {% if form.email.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.email.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Rôle -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="shield" class="w-4 h-4 inline mr-2"></i>
                            Rôle
                        </label>
                        {{ form_widget(form.role, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'onchange': 'handleRoleChange(this.value)'
                        }}) }}
                        {% if form.role.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.role.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-border">
                    <button type="button" onclick="resetForm()"
                        class="px-6 py-3 rounded-xl border border-border hover:bg-muted transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="refresh-cw" class="w-5 h-5"></i>
                        Réinitialiser
                    </button>
                    <button type="submit"
                        class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        Créer le participant
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        <!-- Section pour créer une réunion (visible seulement pour les enseignants) -->
        <div id="teacherSection" class="hidden mt-8">
            <div class="bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl p-8 text-white shadow-xl relative overflow-hidden">
                <div class="absolute inset-0 bg-white/5 pattern-dots"></div>
                <div class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-6">
                    <div>
                        <h2 class="text-2xl font-bold mb-2 flex items-center gap-2">
                            <i data-lucide="video" class="w-6 h-6"></i>
                            Créer une réunion
                        </h2>
                        <p class="text-white/90">En tant qu'enseignant, vous pouvez créer des réunions virtuelles pour vos étudiants</p>
                    </div>
                    <a href="{{ path('app_meet_new') }}" class="bg-white text-green-600 px-6 py-3 rounded-xl hover:bg-white/90 transition-colors font-bold shadow-lg flex items-center gap-2">
                        <i data-lucide="plus" class="w-5 h-5"></i>
                        Créer une réunion
                    </a>
                </div>
            </div>
        </div>

        <!-- Message pour les non-enseignants -->
        <div id="nonTeacherSection" class="hidden mt-8">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 rounded-2xl p-8 text-white shadow-xl relative overflow-hidden">
                <div class="absolute inset-0 bg-white/5 pattern-dots"></div>
                <div class="relative z-10 flex items-center gap-4">
                    <i data-lucide="info" class="w-8 h-8"></i>
                    <div>
                        <h2 class="text-xl font-bold mb-2">Accès limité aux enseignants</h2>
                        <p class="text-white/90">Seuls les enseignants peuvent créer des réunions. Contactez un enseignant si vous avez besoin d'une session.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Gérer l'affichage selon le rôle sélectionné
        function handleRoleChange(role) {
            const teacherSection = document.getElementById('teacherSection');
            const nonTeacherSection = document.getElementById('nonTeacherSection');
            
            if (role === 'enseignant') {
                teacherSection.classList.remove('hidden');
                nonTeacherSection.classList.add('hidden');
            } else if (role) {
                teacherSection.classList.add('hidden');
                nonTeacherSection.classList.remove('hidden');
            } else {
                teacherSection.classList.add('hidden');
                nonTeacherSection.classList.add('hidden');
            }
        }

        // Réinitialiser le formulaire
        function resetForm() {
            document.querySelector('form').reset();
            document.getElementById('teacherSection').classList.add('hidden');
            document.getElementById('nonTeacherSection').classList.add('hidden');
        }

        // Initialiser au chargement
        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.querySelector('select[name="participant[role]"]');
            if (roleSelect) {
                handleRoleChange(roleSelect.value);
            }
            
            // Initialiser Lucide icons
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
