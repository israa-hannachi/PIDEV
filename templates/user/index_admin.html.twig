{% extends 'base_front.html.twig' %}

{% block title %}Gestion des Participants{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-7xl mx-auto">
        <!-- Header Admin -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <i data-lucide="shield" class="w-8 h-8 text-primary"></i>
                    <h1 class="text-3xl font-bold">Administration des Participants</h1>
                </div>
                <p class="text-muted-foreground">Gestion complète des utilisateurs et participants</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('app_meet_index') }}" class="bg-white text-primary border border-primary px-6 py-3 rounded-xl hover:bg-primary/5 transition-all flex items-center gap-2 font-medium">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    Retour aux réunions
                </a>
                <a href="{{ path('app_user_new') }}" class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                    <i data-lucide="user-plus" class="w-5 h-5"></i>
                    Ajouter un participant
                </a>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Statistiques Admin -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl border border-border p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground mb-1">Total Participants</p>
                        <p class="text-2xl font-bold text-foreground">{{ participants|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                        <i data-lucide="users" class="w-6 h-6 text-primary"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl border border-border p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground mb-1">Enseignants</p>
                        <p class="text-2xl font-bold text-green-600">{{ participants|filter(p => p.role == 'enseignant')|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                        <i data-lucide="graduation-cap" class="w-6 h-6 text-green-600"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl border border-border p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground mb-1">Étudiants</p>
                        <p class="text-2xl font-bold text-blue-600">{{ participants|filter(p => p.role == 'etudiant')|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                        <i data-lucide="book-open" class="w-6 h-6 text-blue-600"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl border border-border p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground mb-1">Admins</p>
                        <p class="text-2xl font-bold text-purple-600">{{ participants|filter(p => p.role == 'administrateur')|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                        <i data-lucide="shield" class="w-6 h-6 text-purple-600"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tableau des participants -->
        <div class="bg-white rounded-2xl shadow-sm border border-border overflow-hidden">
            <div class="p-6 border-b border-border">
                <h2 class="text-xl font-semibold flex items-center gap-2">
                    <i data-lucide="list" class="w-5 h-5 text-primary"></i>
                    Liste des Participants
                </h2>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-muted/50">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Participant</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Email</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Rôle</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Réunions</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Date</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border">
                        {% for participant in participants %}
                        <tr class="hover:bg-muted/30 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white text-sm font-bold">
                                        {{ participant.nom|first|upper }}
                                    </div>
                                    <div>
                                        <p class="font-medium">{{ participant.nom }} {{ participant.prenom }}</p>
                                        <p class="text-sm text-muted-foreground">ID: {{ participant.id }}</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-sm">{{ participant.email }}</p>
                            </td>
                            <td class="px-6 py-4">
                                {% if participant.role == 'enseignant' %}
                                    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                        <i data-lucide="graduation-cap" class="w-3 h-3"></i>Enseignant
                                    </span>
                                {% elseif participant.role == 'administrateur' %}
                                    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                                        <i data-lucide="shield" class="w-3 h-3"></i>Admin
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                        <i data-lucide="book-open" class="w-3 h-3"></i>Étudiant
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-sm font-medium">{{ participant.meets|length }}</p>
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-sm text-muted-foreground">{{ participant.createdAt ? participant.createdAt|date('d/m/Y') : '-' }}</p>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('app_user_show', {'id': participant.id}) }}" 
                                       class="p-2 hover:bg-muted rounded-lg transition-colors group">
                                        <i data-lucide="eye" class="w-4 h-4 text-muted-foreground group-hover:text-primary"></i>
                                    </a>
                                    <a href="{{ path('app_user_edit', {'id': participant.id}) }}" 
                                       class="p-2 hover:bg-muted rounded-lg transition-colors group">
                                        <i data-lucide="edit" class="w-4 h-4 text-muted-foreground group-hover:text-secondary"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_user_delete', {'id': participant.id }) }}" 
                                          style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer {{ participant.nom }} {{ participant.prenom }}?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
                                        <button type="submit" class="p-2 hover:bg-red-50 rounded-lg transition-colors group">
                                            <i data-lucide="trash-2" class="w-4 h-4 text-muted-foreground group-hover:text-red-600"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <i data-lucide="users" class="w-12 h-12 text-muted-foreground mx-auto mb-4"></i>
                                <h3 class="text-lg font-medium text-muted-foreground mb-2">Aucun participant trouvé</h3>
                                <p class="text-muted-foreground mb-4">Commencez par ajouter votre premier participant</p>
                                <a href="{{ path('app_user_new') }}" class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all inline-flex items-center gap-2 font-medium">
                                    <i data-lucide="user-plus" class="w-5 h-5"></i>
                                    Ajouter un participant
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
