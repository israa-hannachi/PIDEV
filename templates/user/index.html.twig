{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    {% include 'partials/_sidebar.html.twig' %}
    {% include 'partials/_header.html.twig' %}

    <main class="nxl-container">
        <div class="nxl-content">
            <div class="page-header">
                <div class="page-header-left d-flex align-items-center">
                    <div class="page-header-title">
                        <h5 class="m-b-10">User Management</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                        <li class="breadcrumb-item">Users</li>
                    </ul>
                </div>
                <div class="page-header-right ms-auto">
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                        <i class="feather-plus me-2"></i>
                        <span>Create New User</span>
                    </a>
                </div>
            </div>

            <div class="main-content">
                <div class="row">
                    <div class="col-12">
                        <div class="card stretch stretch-full">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th>Statut</th>
                                                <th>Date Creation</th>
                                                <th class="text-end">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for user in users %}
                                            <tr>
                                                <td>{{ user.id }}</td>
                                                <td>{{ user.nom }}</td>
                                                <td>{{ user.prenom }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>
                                                    <span class="badge bg-soft-primary text-primary">{{ user.role }}</span>
                                                </td>
                                                <td>
                                                    {% if user.statut == 'ACTIF' %}
                                                        <span class="badge bg-soft-success text-success">Actif</span>
                                                    {% else %}
                                                        <span class="badge bg-soft-danger text-danger">Inactif</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                                <td class="text-end">
                                                    <div class="d-flex justify-content-end gap-2">
                                                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-light-brand">
                                                            <i class="feather-eye"></i>
                                                        </a>
                                                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-light-brand">
                                                            <i class="feather-edit"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="8" class="text-center">No records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
