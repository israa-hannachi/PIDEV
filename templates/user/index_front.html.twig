{% extends 'base_front.html.twig' %}

{% block title %}Liste des participants{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Liste des participants</h1>
                <p class="text-muted-foreground">Gérez tous les participants de la plateforme</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('app_meet_index') }}" class="btn btn-secondary px-6 py-3 rounded-xl hover:bg-secondary/90 transition-all flex items-center gap-2 font-medium border border-secondary text-secondary">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    Retour
                </a>
                <a href="{{ path('app_user_new') }}" class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                    <i data-lucide="plus" class="w-5 h-5"></i>
                    Nouveau participant
                </a>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Statistiques -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
            <div class="bg-white rounded-xl p-6 border border-border">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground">Total</p>
                        <p class="text-2xl font-bold">{{ participants|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                        <i data-lucide="users" class="w-6 h-6 text-primary"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl p-6 border border-border">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground">Enseignants</p>
                        <p class="text-2xl font-bold text-green-600">{{ participants|filter(p => p.role == 'enseignant')|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="graduation-cap" class="w-6 h-6 text-green-600"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl p-6 border border-border">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground">Étudiants</p>
                        <p class="text-2xl font-bold text-blue-600">{{ participants|filter(p => p.role == 'etudiant')|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="book-open" class="w-6 h-6 text-blue-600"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl p-6 border border-border">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-muted-foreground">Admins</p>
                        <p class="text-2xl font-bold text-purple-600">{{ participants|filter(p => p.role == 'administrateur')|length }}</p>
                    </div>
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="shield" class="w-6 h-6 text-purple-600"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tableau -->
        <div class="bg-white rounded-2xl shadow-sm border border-border overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-muted/50">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Participant</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Email</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Rôle</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-muted-foreground">Date de création</th>
                            <th class="px-6 py-4 text-center text-sm font-medium text-muted-foreground">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participant in participants %}
                            <tr class="border-t border-border hover:bg-muted/30 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white font-semibold">
                                            {{ participant.nom|first|upper }}
                                        </div>
                                        <div>
                                            <div class="font-medium">{{ participant.nom }} {{ participant.prenom }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="mail" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="text-sm">{{ participant.email }}</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    {% if participant.role == 'enseignant' %}
                                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <i data-lucide="graduation-cap" class="w-3 h-3"></i>Enseignant
                                        </span>
                                    {% elseif participant.role == 'administrateur' %}
                                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                            <i data-lucide="shield" class="w-3 h-3"></i>Administrateur
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            <i data-lucide="book-open" class="w-3 h-3"></i>Étudiant
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-muted-foreground">{{ participant.createdAt ? participant.createdAt|date('d/m/Y H:i') : '' }}</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center gap-2">
                                        <a href="{{ path('app_user_show', {'id': participant.id}) }}" 
                                           class="p-2 hover:bg-blue-100 rounded-lg transition-colors group" title="Afficher">
                                            <i data-lucide="eye" class="w-4 h-4 text-blue-600 group-hover:scale-110 transition-transform"></i>
                                        </a>
                                        <a href="{{ path('app_user_edit', {'id': participant.id}) }}" 
                                           class="p-2 hover:bg-yellow-100 rounded-lg transition-colors group" title="Modifier">
                                            <i data-lucide="edit" class="w-4 h-4 text-yellow-600 group-hover:scale-110 transition-transform"></i>
                                        </a>
                                        {% if participant.role == 'enseignant' %}
                                            <a href="{{ path('app_meet_new') }}?participant={{ participant.id }}" 
                                               class="p-2 hover:bg-green-100 rounded-lg transition-colors group" title="Créer une réunion">
                                                <i data-lucide="video" class="w-4 h-4 text-green-600 group-hover:scale-110 transition-transform"></i>
                                            </a>
                                        {% endif %}
                                        <form method="post" action="{{ path('app_user_delete', {'id': participant.id}) }}" 
                                              style="display: inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
                                            <button type="submit" class="p-2 hover:bg-red-100 rounded-lg transition-colors group" title="Supprimer">
                                                <i data-lucide="trash-2" class="w-4 h-4 text-red-600 group-hover:scale-110 transition-transform"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% if participants|length == 0 %}
                <div class="text-center py-12">
                    <i data-lucide="users" class="w-12 h-12 text-muted-foreground mx-auto mb-4"></i>
                    <h3 class="text-lg font-medium text-muted-foreground mb-2">Aucun participant trouvé</h3>
                    <p class="text-muted-foreground mb-4">Commencez par ajouter votre premier participant</p>
                    <a href="{{ path('app_user_new') }}" class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all inline-flex items-center gap-2 font-medium">
                        <i data-lucide="plus" class="w-5 h-5"></i>
                        Ajouter un participant
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Initialiser Lucide icons
        document.addEventListener('DOMContentLoaded', function() {
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
