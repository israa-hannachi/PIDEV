{% extends 'base_front.html.twig' %}

{% block title %}Modifier participant{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Modifier participant</h1>
                <p class="text-muted-foreground">Mettre à jour les informations du participant</p>
            </div>
            <a href="{{ path('app_user_index') }}" class="bg-white text-secondary border border-secondary px-6 py-3 rounded-xl hover:bg-secondary/5 transition-all flex items-center gap-2 font-medium">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Retour
            </a>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire -->
        <div class="bg-white rounded-2xl shadow-sm border border-border p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
            
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nom -->
                    <div class="bg-muted/30 rounded-2xl p-4 border border-border">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Nom
                        </label>
                        {{ form_widget(form.nom, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'Entrez le nom'
                        }}) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.nom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Prénom -->
                    <div class="bg-muted/30 rounded-2xl p-4 border border-border">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Prénom
                        </label>
                        {{ form_widget(form.prenom, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'Entrez le prénom'
                        }}) }}
                        {% if form.prenom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.prenom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Email -->
                    <div class="md:col-span-2 bg-muted/30 rounded-2xl p-4 border border-border">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="mail" class="w-4 h-4 inline mr-2"></i>
                            Email
                        </label>
                        {{ form_widget(form.email, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'exemple@email.com'
                        }}) }}
                        {% if form.email.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.email.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Rôle -->
                    <div class="md:col-span-2 bg-muted/30 rounded-2xl p-4 border border-border">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="shield" class="w-4 h-4 inline mr-2"></i>
                            Rôle
                        </label>
                        {{ form_widget(form.role, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'onchange': 'handleRoleChange(this.value)'
                        }}) }}
                        {% if form.role.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.role.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-border">
                    <a href="{{ path('app_user_show', {'id': participant.id}) }}" 
                       class="btn btn-secondary px-6 py-3 rounded-xl transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="arrow-left" class="w-5 h-5"></i>
                        Annuler
                    </a>
                    <button type="submit"
                        class="btn btn-primary px-6 py-3 rounded-xl transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        Enregistrer les modifications
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
