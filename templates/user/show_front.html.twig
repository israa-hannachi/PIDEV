{% extends 'base_front.html.twig' %}

{% block title %}Afficher participant{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Détails du participant</h1>
                <p class="text-muted-foreground">Informations complètes du participant</p>
            </div>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary px-6 py-3 rounded-xl hover:bg-secondary/90 transition-all flex items-center gap-2 font-medium border border-secondary text-secondary">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Retour
            </a>
        </div>

        <!-- Carte participant -->
        <div class="bg-white rounded-2xl shadow-sm border border-border p-8">
            <div class="flex items-center gap-6 mb-6">
                <div class="w-20 h-20 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white text-2xl font-bold">
                    {{ participant.nom|first|upper }}
                </div>
                <div>
                    <h2 class="text-2xl font-bold mb-2">{{ participant.nom }} {{ participant.prenom }}</h2>
                    <div class="flex items-center gap-2">
                        {% if participant.role == 'enseignant' %}
                            <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <i data-lucide="graduation-cap" class="w-4 h-4"></i>Enseignant
                            </span>
                        {% elseif participant.role == 'administrateur' %}
                            <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                                <i data-lucide="shield" class="w-4 h-4"></i>Administrateur
                            </span>
                        {% else %}
                            <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                <i data-lucide="book-open" class="w-4 h-4"></i>Étudiant
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                        <i data-lucide="mail" class="w-5 h-5 text-primary"></i>
                        Email
                    </h3>
                    <p class="text-muted-foreground">{{ participant.email }}</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                        <i data-lucide="calendar" class="w-5 h-5 text-primary"></i>
                        Date de création
                    </h3>
                    <p class="text-muted-foreground">{{ participant.createdAt ? participant.createdAt|date('d/m/Y H:i') : 'Non défini' }}</p>
                </div>
            </div>

            {% if participant.meets|length > 0 %}
                <div class="mt-8">
                    <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                        <i data-lucide="video" class="w-5 h-5 text-primary"></i>
                        Réunions associées ({{ participant.meets|length }})
                    </h3>
                    <div class="space-y-3">
                        {% for meet in participant.meets %}
                            <div class="bg-muted/50 rounded-lg p-4 flex items-center justify-between">
                                <div>
                                    <h4 class="font-medium">{{ meet.titre }}</h4>
                                    <p class="text-sm text-muted-foreground">{{ meet.dateDebut|date('d/m/Y H:i') }}</p>
                                </div>
                                <a href="{{ path('app_meet_show', {'id': meet.id}) }}" 
                                   class="text-primary hover:text-primary/80 transition-colors">
                                    <i data-lucide="external-link" class="w-4 h-4"></i>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="flex items-center gap-3 mt-8 pt-6 border-t border-border">
                <a href="{{ path('app_user_edit', {'id': participant.id}) }}" 
                   class="bg-secondary text-white px-6 py-3 rounded-xl hover:bg-secondary/90 transition-all flex items-center gap-2 font-medium">
                    <i data-lucide="edit" class="w-5 h-5"></i>
                    Modifier
                </a>
                {% if participant.role == 'enseignant' %}
                    <a href="{{ path('app_meet_new') }}?participant={{ participant.id }}" 
                       class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="video" class="w-5 h-5"></i>
                        Créer une réunion
                    </a>
                {% endif %}
                <form method="post" action="{{ path('app_user_delete', {'id': participant.id }) }}" 
                      style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer {{ participant.nom }} {{ participant.prenom }}?')">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
                    <button type="submit" class="bg-red-600 text-white px-6 py-3 rounded-xl hover:bg-red-700 transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="trash-2" class="w-5 h-5"></i>
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
