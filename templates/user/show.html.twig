{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    {% include 'partials/_sidebar.html.twig' %}
    {% include 'partials/_header.html.twig' %}

    <main class="nxl-container">
        <div class="nxl-content">
            <div class="page-header">
                <div class="page-header-left d-flex align-items-center">
                    <div class="page-header-title">
                        <h5 class="m-b-10">User Details</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Users</a></li>
                        <li class="breadcrumb-item">Show</li>
                    </ul>
                </div>
            </div>

            <div class="main-content">
                <div class="row">
                    <div class="col-12">
                        <div class="card stretch stretch-full">
                            <div class="card-body">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th>Id</th>
                                            <td>{{ user.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Nom</th>
                                            <td>{{ user.nom }}</td>
                                        </tr>
                                        <tr>
                                            <th>Prenom</th>
                                            <td>{{ user.prenom }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email</th>
                                            <td>{{ user.email }}</td>
                                        </tr>
                                        <tr>
                                            <th>Role</th>
                                            <td>{{ user.role }}</td>
                                        </tr>
                                        <tr>
                                            <th>Statut</th>
                                            <td>{{ user.statut }}</td>
                                        </tr>
                                        <tr>
                                            <th>Date Creation</th>
                                            <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                        </tr>
                                    </tbody>
                                </table>

                                <div class="mt-4 d-flex gap-2">
                                    <a href="{{ path('app_user_index') }}" class="btn btn-light">Back to list</a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
                                    {{ include('user/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
