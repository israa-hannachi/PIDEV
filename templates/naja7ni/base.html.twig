<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Naja7ni{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="stylesheet" href="{{ asset('naja7ni/assets/css/main.css') }}">
</head>

<body class="bg-background text-foreground font-sans">
<div class="flex h-screen overflow-hidden">
    <aside id="sidebar" class="w-24 bg-sidebar border-r border-sidebar-border h-screen flex flex-col items-center py-8 gap-8">
        <div class="flex items-center justify-center mb-2">
            <img src="{{ asset('naja7ni/assets/images/logo-small.png') }}" alt="Naja7ni" class="w-12 h-12 object-contain filter drop-shadow-md">
        </div>
        <nav class="flex flex-col gap-4 w-full px-2">
            <a href="{{ path('app_home') }}" class="nav-item flex flex-col items-center gap-1 p-3 rounded-xl transition-all duration-200 group">
                <i data-lucide="home" class="w-6 h-6 transition-colors"></i>
                <span class="text-[11px] font-medium">Accueil</span>
            </a>
            <a href="{{ asset('edu/profil.html') }}" class="nav-item flex flex-col items-center gap-1 p-3 rounded-xl transition-all duration-200 group">
                <i data-lucide="user" class="w-6 h-6 transition-colors"></i>
                <span class="text-[11px] font-medium">Profil</span>
            </a>
            <a href="{{ path('app_categorie_index') }}" class="nav-item flex flex-col items-center gap-1 p-3 rounded-xl transition-all duration-200 group">
                <i data-lucide="folder-open" class="w-6 h-6 transition-colors"></i>
                <span class="text-[11px] font-medium">Catégories</span>
            </a>
            <a href="{{ asset('edu/meet.html') }}" class="nav-item flex flex-col items-center gap-1 p-3 rounded-xl transition-all duration-200 group">
                <i data-lucide="video" class="w-6 h-6 transition-colors"></i>
                <span class="text-[11px] font-medium">Meet</span>
            </a>
            <a href="{{ asset('edu/jeux.html') }}" class="nav-item flex flex-col items-center gap-1 p-3 rounded-xl transition-all duration-200 group">
                <i data-lucide="gamepad-2" class="w-6 h-6 transition-colors"></i>
                <span class="text-[11px] font-medium">Jeux</span>
            </a>
            <a href="{{ asset('edu/events.html') }}" class="nav-item flex flex-col items-center gap-1 p-3 rounded-xl transition-all duration-200 group">
                <i data-lucide="calendar" class="w-6 h-6 transition-colors"></i>
                <span class="text-[11px] font-medium">Events</span>
            </a>
            <a href="{{ asset('edu/forums.html') }}" class="nav-item flex flex-col items-center gap-1 p-3 rounded-xl transition-all duration-200 group">
                <i data-lucide="messages-square" class="w-6 h-6 transition-colors"></i>
                <span class="text-[11px] font-medium">Forums</span>
            </a>
        </nav>
    </aside>

    <div class="flex-1 flex flex-col overflow-hidden">
        <nav class="h-16 bg-white border-b border-border px-8 flex items-center justify-between shadow-sm z-10">
            <div class="flex items-center gap-8">
                <img src="{{ asset('naja7ni/assets/images/logo-full.png') }}" alt="Naja7ni" class="h-10 object-contain">
            </div>
            <div class="flex-1 max-w-xl mx-8">
                <form method="get" action="{{ path('app_search') }}" class="flex items-center gap-3">
                    <div class="relative group flex-1">
                        <i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
                        <input name="q" value="{{ app.request.query.get('q') }}" type="text" placeholder="Rechercher des cours, modules..." class="w-full pl-10 pr-4 py-2.5 bg-input-background rounded-xl border border-transparent focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all duration-300" />
                        <input type="hidden" name="type" value="{{ app.request.query.get('type')|default('all') }}" />
                    </div>

                    {% set _sort = app.request.query.get('sort')|default('date_desc') %}
                    {% set _sortLabel = _sort == 'alpha_asc' ? 'A → Z' : (_sort == 'alpha_desc' ? 'Z → A' : 'Date') %}
                    {% set _route = app.request.attributes.get('_route') %}
                    {% set _routeParams = app.request.attributes.get('_route_params')|default({}) %}
                    {% set _queryParams = app.request.query.all|default({}) %}
                    {% set _baseParams = _routeParams|merge(_queryParams) %}
                    {% set _sortableRoutes = ['app_categorie_index', 'app_module_index', 'app_cours_index', 'app_search'] %}
                    {% set _sortParam = 'sort' %}
                    {% set _targetRoute = _route in _sortableRoutes ? _route : (
                        _route == 'app_categorie_show' ? 'app_categorie_show' : (
                            _route == 'app_module_show' ? 'app_module_show' : (
                                _route starts with 'app_categorie_' ? 'app_categorie_index' : (
                                    _route starts with 'app_module_' ? 'app_module_index' : (
                                        _route starts with 'app_cours_' ? 'app_cours_index' : 'app_search'
                                    )
                                )
                            )
                        )
                    ) %}

                    {% if _route == 'app_categorie_show' %}
                        {% set _sortParam = 'sort_modules' %}
                        {% set _sort = app.request.query.get('sort_modules')|default('date_desc') %}
                        {% set _sortLabel = _sort == 'alpha_asc' ? 'A → Z' : (_sort == 'alpha_desc' ? 'Z → A' : 'Date') %}
                    {% elseif _route == 'app_module_show' %}
                        {% set _sortParam = 'sort_cours' %}
                        {% set _sort = app.request.query.get('sort_cours')|default('date_desc') %}
                        {% set _sortLabel = _sort == 'alpha_asc' ? 'A → Z' : (_sort == 'alpha_desc' ? 'Z → A' : 'Date') %}
                    {% endif %}

                    {% if _targetRoute in ['app_categorie_index', 'app_module_index', 'app_cours_index', 'app_search'] %}
                        {% set _baseParams = _queryParams %}
                    {% endif %}

                    <details class="relative">
                        <summary class="list-none cursor-pointer h-[44px] inline-flex items-center gap-2 px-3 py-2.5 bg-input-background rounded-xl border border-transparent hover:bg-white hover:border-border focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all duration-300">
                            <i data-lucide="arrow-up-down" class="w-4 h-4 text-muted-foreground"></i>
                            <span class="text-sm font-semibold">Trier</span>
                            <span class="text-xs text-muted-foreground">({{ _sortLabel }})</span>
                        </summary>

                        <div class="absolute right-0 mt-2 w-52 bg-white border border-border rounded-xl shadow-lg overflow-hidden z-20">
                            <a class="block px-4 py-2.5 text-sm hover:bg-muted/30 transition" href="{{ path(_targetRoute, _baseParams|merge({(_sortParam): 'date_desc'})) }}">Date (récent)</a>
                            <a class="block px-4 py-2.5 text-sm hover:bg-muted/30 transition" href="{{ path(_targetRoute, _baseParams|merge({(_sortParam): 'alpha_asc'})) }}">A → Z</a>
                            <a class="block px-4 py-2.5 text-sm hover:bg-muted/30 transition" href="{{ path(_targetRoute, _baseParams|merge({(_sortParam): 'alpha_desc'})) }}">Z → A</a>
                        </div>
                    </details>
                </form>
            </div>
            <div class="flex items-center gap-4">
                <button class="p-2.5 hover:bg-muted rounded-xl transition-colors relative group">
                    <i data-lucide="bell" class="w-5 h-5 text-muted-foreground group-hover:text-foreground transition-colors"></i>
                    <span class="absolute top-2 right-2 w-2 h-2 bg-accent rounded-full border border-white"></span>
                </button>
                <button class="p-2.5 hover:bg-muted rounded-xl transition-colors group">
                    <i data-lucide="settings" class="w-5 h-5 text-muted-foreground group-hover:text-foreground transition-colors"></i>
                </button>
                <div class="w-9 h-9 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white text-sm font-semibold cursor-pointer shadow-md hover:shadow-lg transition-all transform hover:scale-105">A</div>
            </div>
        </nav>

        <div id="content" class="flex-1 overflow-y-auto bg-muted/30">
            <div class="p-8 min-h-full">
                <div class="max-w-7xl mx-auto">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="mb-4 p-4 rounded-xl border border-border bg-white text-sm text-foreground">{{ message }}</div>
                        {% endfor %}
                    {% endfor %}

                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('naja7ni/assets/js/main.js') }}"></script>
</body>
</html>
