{% extends 'naja7ni/base.html.twig' %}

{% block title %}Naja7ni - {{ cour.titre }}{% endblock %}

{% block body %}
    <div class="mb-8 flex items-start justify-between gap-6">
        <div>
            <div class="flex items-center gap-4 mb-2">
                <div class="w-12 h-12 bg-primary/10 text-primary rounded-xl flex items-center justify-center">
                    <i data-lucide="book-open" class="w-6 h-6"></i>
                </div>
                <div>
                    <h1 class="text-3xl font-bold">{{ cour.titre }}</h1>
                    <p class="text-sm text-muted-foreground">
                        Module
                        <a class="font-semibold text-primary hover:underline" href="{{ path('app_module_show', {'id': cour.module.id}) }}">{{ cour.module.titre }}</a>
                    </p>
                </div>
            </div>
            {% if cour.description %}
                <p class="text-muted-foreground">{{ cour.description }}</p>
            {% endif %}
        </div>

        <div class="flex items-center gap-3">
            <a href="{{ path('app_module_show', {'id': cour.module.id}) }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white border border-border text-foreground font-semibold hover:bg-muted transition">
                <i data-lucide="arrow-left" class="w-4 h-4"></i>
                Retour au module
            </a>
            {% set _isFavori = favoris_ids is defined and (cour.id in favoris_ids) %}
            <form method="post" action="{{ path('app_favoris_toggle', {'id': cour.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('toggle_favori' ~ cour.id) }}">
                <button type="submit" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white border border-border text-foreground font-semibold hover:bg-muted transition" title="{{ _isFavori ? 'Retirer des favoris' : 'Ajouter aux favoris' }}">
                    <i data-lucide="star" class="w-4 h-4 {{ _isFavori ? 'text-accent' : 'text-muted-foreground' }}"></i>
                    Favori
                </button>
            </form>
            {% if cour.contenu %}
                <a href="{{ path('app_cours_pdf', {'id': cour.id}) }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-primary text-white font-semibold shadow hover:shadow-md transition">
                    <i data-lucide="file-down" class="w-4 h-4"></i>
                    Exporter PDF
                </a>
            {% endif %}
            <a href="{{ path('app_cours_edit', {'id': cour.id}) }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white border border-border text-foreground font-semibold hover:bg-muted transition">
                <i data-lucide="pencil" class="w-4 h-4"></i>
                Modifier
            </a>
            {{ include('cours/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-border p-8 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            <div class="p-4 rounded-xl bg-muted/20 border border-border">
                <div class="text-muted-foreground">Durée</div>
                <div class="font-semibold">{{ cour.duree }} min</div>
            </div>
            <div class="p-4 rounded-xl bg-muted/20 border border-border">
                <div class="text-muted-foreground">Ordre</div>
                <div class="font-semibold">#{{ cour.ordre }}</div>
            </div>
        </div>

        <div>
            <h2 class="text-lg font-bold mb-2">Contenu</h2>
            {% if cour.contenu %}
                <div class="p-4 rounded-xl border border-border bg-muted/10 text-sm prose max-w-none">{{ cour.contenu|raw }}</div>
            {% elseif cour.fichierContenu %}
                {% set fileUrl = asset('uploads/cours_fichiers/' ~ cour.fichierContenu) %}
                {% set ext = (cour.fichierContenu|split('.')|last)|lower %}
                <a class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-primary text-white font-semibold shadow hover:shadow-md transition" href="{{ asset('uploads/cours_fichiers/' ~ cour.fichierContenu) }}" target="_blank" rel="noopener">
                    <i data-lucide="download" class="w-4 h-4"></i>
                    Télécharger le fichier
                </a>
                <div class="mt-2 text-xs text-muted-foreground">Fichier: {{ cour.fichierContenu }}</div>

                {% if ext in ['png', 'jpg', 'jpeg', 'gif', 'webp'] %}
                    <div class="mt-6">
                        <img src="{{ fileUrl }}" alt="{{ cour.titre }}" class="max-w-full rounded-xl border border-border" />
                    </div>
                {% elseif ext == 'pdf' %}
                    <div class="mt-6 rounded-xl border border-border overflow-hidden bg-muted/10" style="height: 70vh;">
                        <iframe src="{{ fileUrl }}" class="w-full h-full" title="{{ cour.titre }}"></iframe>
                    </div>
                {% else %}
                    <div class="mt-4 p-4 rounded-xl border border-border bg-muted/20 text-sm text-muted-foreground">
                        La prévisualisation n’est pas disponible pour ce format. Utilise le bouton de téléchargement.
                    </div>
                {% endif %}
            {% else %}
                <div class="p-4 rounded-xl border border-border bg-muted/20 text-sm text-muted-foreground">Aucun contenu défini.</div>
            {% endif %}
        </div>
    </div>
{% endblock %}
