<form method="post" action="{{ path('app_cours_delete', {'id': cour.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cour.id) }}">
    <button class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-red-600 text-white font-semibold shadow hover:shadow-md hover:bg-red-700 transition" type="submit">
        <i data-lucide="trash-2" class="w-4 h-4"></i>
        Supprimer
    </button>
</form>
