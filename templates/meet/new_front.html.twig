{% extends 'base_front.html.twig' %}

{% block title %}Créer une réunion{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-start justify-between gap-6">
                <div>
                    <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-3">
                        <i data-lucide="video" class="w-4 h-4"></i>
                        Nouvelle réunion
                    </div>
                    <h1 class="text-3xl md:text-4xl font-bold leading-tight">Créer une réunion</h1>
                    <p class="text-muted-foreground mt-2">Organisez une session de visioconférence pour vos étudiants</p>
                </div>
                <a href="{{ path('app_meet_index') }}" class="btn btn-secondary px-5 py-2.5 rounded-xl transition-all flex items-center gap-2 font-medium">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    Retour
                </a>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-accent/10 border border-border text-foreground px-4 py-3 rounded-xl mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-destructive/10 border border-border text-foreground px-4 py-3 rounded-xl mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire -->
        <div class="card rounded-2xl p-8 md:p-10">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
            
                <!-- Titre -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="heading" class="w-4 h-4 inline mr-2"></i>
                        Titre de la réunion
                    </label>
                    {{ form_widget(form.titre, {'attr': {
                        'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all',
                        'placeholder': 'Ex: Cours de Mathématiques'
                    }}) }}
                    {% if form.titre.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.titre.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="align-left" class="w-4 h-4 inline mr-2"></i>
                        Description
                    </label>
                    {{ form_widget(form.description, {'attr': {
                        'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all resize-none',
                        'rows': 4,
                        'placeholder': 'Décrivez le contenu de la réunion...'
                    }}) }}
                    {% if form.description.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.description.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Dates -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="calendar" class="w-4 h-4 inline mr-2"></i>
                            Date de début
                        </label>
                        {{ form_widget(form.dateDebut, {'attr': {
                            'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all'
                        }}) }}
                        {% if form.dateDebut.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.dateDebut.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="calendar-check" class="w-4 h-4 inline mr-2"></i>
                            Date de fin
                        </label>
                        {{ form_widget(form.dateFin, {'attr': {
                            'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all'
                        }}) }}
                        {% if form.dateFin.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.dateFin.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Lien de la réunion -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="link" class="w-4 h-4 inline mr-2"></i>
                        Lien de la réunion (optionnel)
                    </label>
                    {{ form_widget(form.lienMeet, {'attr': {
                        'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all',
                        'placeholder': 'https://meet.google.com/...'
                    }}) }}
                    {% if form.lienMeet.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.lienMeet.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Participant (enseignant) -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                        Enseignant responsable
                    </label>
                    {{ form_widget(form.participant, {'attr': {
                        'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all'
                    }}) }}
                    {% if form.participant.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.participant.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Participants inscrits (étudiants) -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="users" class="w-4 h-4 inline mr-2"></i>
                        Participants (étudiants) inscrits
                    </label>
                    <div class="flex items-center gap-2 mb-3">
                        <input type="checkbox" id="selectAllParticipants" class="h-4 w-4" />
                        <label for="selectAllParticipants" class="text-sm text-muted-foreground">Tout sélectionner</label>
                    </div>
                    {{ form_widget(form.participants, {'attr': {
                        'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all'
                    }}) }}
                    {% if form.participants.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.participants.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-border">
                    <a href="{{ path('app_meet_index') }}" 
                       class="px-6 py-3 rounded-xl border border-border hover:bg-muted transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="arrow-left" class="w-5 h-5"></i>
                        Annuler
                    </a>
                    <button type="submit"
                        class="btn btn-primary px-6 py-3 rounded-xl hover:shadow-lg flex items-center gap-2 font-medium">
                        <i data-lucide="video" class="w-5 h-5"></i>
                        Créer la réunion
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser Lucide icons
            if (window.lucide) {
                window.lucide.createIcons();
            }

            const selectAll = document.getElementById('selectAllParticipants');

            const getParticipantsField = () => {
                const select = document.getElementById('meet_participants_select')
                    || document.getElementById('meet_participants')
                    || document.querySelector('select[multiple][name$="[participants][]"]');

                if (select) {
                    return { type: 'select', el: select };
                }

                const checkboxes = Array.from(document.querySelectorAll('input[type="checkbox"][name$="[participants][]"]'));
                if (checkboxes.length > 0) {
                    return { type: 'checkboxes', els: checkboxes };
                }

                return null;
            };

            const refreshSelectAllState = () => {
                if (!selectAll) {
                    return;
                }

                const field = getParticipantsField();
                if (!field) {
                    return;
                }

                if (field.type === 'select') {
                    const options = Array.from(field.el.options || []);
                    const enabled = options.filter(o => !o.disabled);
                    const selectedEnabled = enabled.filter(o => o.selected);
                    selectAll.checked = enabled.length > 0 && selectedEnabled.length === enabled.length;
                    return;
                }

                const enabled = field.els.filter(c => !c.disabled);
                const checkedEnabled = enabled.filter(c => c.checked);
                selectAll.checked = enabled.length > 0 && checkedEnabled.length === enabled.length;
            };

            if (selectAll) {
                selectAll.addEventListener('change', () => {
                    const field = getParticipantsField();
                    if (!field) {
                        return;
                    }

                    if (field.type === 'select') {
                        const options = Array.from(field.el.options || []);
                        for (const o of options) {
                            if (!o.disabled) {
                                o.selected = selectAll.checked;
                            }
                        }
                        field.el.dispatchEvent(new Event('change', { bubbles: true }));
                        return;
                    }

                    for (const c of field.els) {
                        if (!c.disabled) {
                            c.checked = selectAll.checked;
                        }
                    }
                });

                const field = getParticipantsField();
                if (field?.type === 'select') {
                    field.el.addEventListener('change', refreshSelectAllState);
                } else if (field?.type === 'checkboxes') {
                    for (const c of field.els) {
                        c.addEventListener('change', refreshSelectAllState);
                    }
                }

                refreshSelectAllState();
            }
        });
    </script>
{% endblock %}
