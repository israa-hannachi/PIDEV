{% extends 'base_front.html.twig' %}

{% block title %}Rejoindre la réunion{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Rejoindre la réunion</h1>
            </div>
            <a href="{{ path('app_meet_index') }}" class="bg-white text-secondary border border-secondary px-6 py-3 rounded-xl hover:bg-secondary/5 transition-all flex items-center gap-2 font-medium">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Retour
            </a>
        </div>

        <!-- Info réunion -->
        <div class="bg-gradient-to-r from-primary to-secondary rounded-2xl p-6 text-white mb-8 shadow-xl">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
                    <i data-lucide="video" class="w-8 h-8"></i>
                </div>
                <div>
                    <h2 class="text-2xl font-bold mb-1">{{ meet.titre }}</h2>
                    <p class="text-white/90">Prof. {{ meet.participant.nom }} {{ meet.participant.prenom }}</p>
                    <p class="text-white/80 text-sm">{{ meet.dateDebut|date('d/m/Y H:i') }}</p>
                </div>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <div class="card rounded-2xl p-8">
            <div class="mb-6">
                <h3 class="text-xl font-semibold mb-2">Accès à la réunion</h3>
                <p class="text-muted-foreground">Les étudiants doivent être pré-inscrits par l’enseignant.</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
                <div>
                    {{ form_label(form.mode, null, {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
                    <div class="flex flex-col md:flex-row gap-4">
                        {{ form_widget(form.mode) }}
                    </div>
                </div>

                <div>
                    {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.email, {'attr': {
                        'class': 'form-control w-full px-4 py-3 rounded-xl focus:ring-4 transition-all',
                        'placeholder': 'exemple@email.com'
                    }}) }}
                </div>

                <div class="flex items-center justify-between pt-6 border-t border-border">
                    <a href="{{ path('app_meet_index') }}" class="btn btn-secondary px-6 py-3 rounded-xl transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="arrow-left" class="w-5 h-5"></i>
                        Annuler
                    </a>
                    <button type="submit" class="btn btn-primary px-6 py-3 rounded-xl transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                        <i data-lucide="log-in" class="w-5 h-5"></i>
                        Rejoindre
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
