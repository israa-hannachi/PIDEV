{% extends 'base_front.html.twig' %}

{% block title %}Rejoindre la réunion{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Rejoindre la réunion</h1>
                <p class="text-muted-foreground">Créez votre profil pour participer à la réunion</p>
            </div>
            <a href="{{ path('app_meet_index') }}" class="btn btn-secondary px-6 py-3 rounded-xl hover:bg-secondary/90 transition-all flex items-center gap-2 font-medium border border-secondary text-secondary">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Retour
            </a>
        </div>

        <!-- Info réunion -->
        <div class="bg-gradient-to-r from-primary to-secondary rounded-2xl p-6 text-white mb-8 shadow-xl">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
                    <i data-lucide="video" class="w-8 h-8"></i>
                </div>
                <div>
                    <h2 class="text-2xl font-bold mb-1">{{ meet.titre }}</h2>
                    <p class="text-white/90">Prof. {{ meet.participant.nom }} {{ meet.participant.prenom }}</p>
                    <p class="text-white/80 text-sm">{{ meet.dateDebut|date('d/m/Y H:i') }}</p>
                </div>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire participant -->
        <div class="bg-white rounded-2xl shadow-sm border border-border p-8">
            <div class="mb-6">
                <h3 class="text-xl font-semibold mb-2">Créer votre profil</h3>
                <p class="text-muted-foreground">Remplissez vos informations pour rejoindre la réunion</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nom -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Nom
                        </label>
                        {{ form_widget(form.nom, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'Entrez votre nom'
                        }}) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.nom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Prénom -->
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                            Prénom
                        </label>
                        {{ form_widget(form.prenom, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'Entrez votre prénom'
                        }}) }}
                        {% if form.prenom.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.prenom.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Email -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="mail" class="w-4 h-4 inline mr-2"></i>
                            Email
                        </label>
                        {{ form_widget(form.email, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                            'placeholder': 'votre@email.com'
                        }}) }}
                        {% if form.email.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.email.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Rôle -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="shield" class="w-4 h-4 inline mr-2"></i>
                            Rôle
                        </label>
                        {{ form_widget(form.role, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all'
                        }}) }}
                        {% if form.role.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.role.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-border">
                    <a href="{{ path('app_meet_index') }}" 
                       class="px-6 py-3 rounded-xl border border-border hover:bg-muted transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="arrow-left" class="w-5 h-5"></i>
                        Annuler
                    </a>
                    <button type="submit"
                        class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                        <i data-lucide="user-plus" class="w-5 h-5"></i>
                        Créer et rejoindre la réunion
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
