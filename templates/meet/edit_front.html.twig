{% extends 'base_front.html.twig' %}

{% block title %}Modifier réunion{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Modifier réunion</h1>
                <p class="text-muted-foreground">Mettre à jour les informations de la réunion</p>
            </div>
            <a href="{{ path('app_meet_index') }}" class="btn btn-secondary px-6 py-3 rounded-xl hover:bg-secondary/90 transition-all flex items-center gap-2 font-medium border border-secondary text-secondary">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Retour
            </a>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire -->
        <div class="bg-white rounded-2xl shadow-sm border border-border p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
                <!-- Titre -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="heading" class="w-4 h-4 inline mr-2"></i>
                        Titre de la réunion
                    </label>
                    {{ form_widget(form.titre, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                        'placeholder': 'Ex: Cours de Mathématiques'
                    }}) }}
                    {% if form.titre.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.titre.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="align-left" class="w-4 h-4 inline mr-2"></i>
                        Description
                    </label>
                    {{ form_widget(form.description, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all resize-none',
                        'rows': 4,
                        'placeholder': 'Décrivez le contenu de la réunion...'
                    }}) }}
                    {% if form.description.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.description.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Dates -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="calendar" class="w-4 h-4 inline mr-2"></i>
                            Date de début
                        </label>
                        {{ form_widget(form.dateDebut, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all'
                        }}) }}
                        {% if form.dateDebut.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.dateDebut.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2">
                            <i data-lucide="calendar-check" class="w-4 h-4 inline mr-2"></i>
                            Date de fin
                        </label>
                        {{ form_widget(form.dateFin, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all'
                        }}) }}
                        {% if form.dateFin.vars.errors|length > 0 %}
                            <div class="mt-2 text-red-600 text-sm">
                                {% for error in form.dateFin.vars.errors %}
                                    <div class="flex items-center gap-1">
                                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Lien de la réunion -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="link" class="w-4 h-4 inline mr-2"></i>
                        Lien de la réunion (optionnel)
                    </label>
                    {{ form_widget(form.lienMeet, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all',
                        'placeholder': 'https://meet.google.com/...'
                    }}) }}
                    {% if form.lienMeet.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.lienMeet.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Participant (enseignant) -->
                <div>
                    <label class="block text-sm font-medium mb-2">
                        <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                        Enseignant responsable
                    </label>
                    {{ form_widget(form.participant, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-xl border border-border bg-input-background focus:bg-white focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all'
                    }}) }}
                    {% if form.participant.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {% for error in form.participant.vars.errors %}
                                <div class="flex items-center gap-1">
                                    <i data-lucide="alert-circle" class="w-4 h-4"></i>
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-border">
                    <a href="{{ path('app_meet_show', {'id': meet.id}) }}" 
                       class="px-6 py-3 rounded-xl border border-border hover:bg-muted transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="arrow-left" class="w-5 h-5"></i>
                        Annuler
                    </a>
                    <button type="submit"
                        class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        Enregistrer les modifications
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser Lucide icons
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
