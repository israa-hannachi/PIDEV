{% extends 'base_front.html.twig' %}

{% block title %}Afficher réunion{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2">Détails de la réunion</h1>
                <p class="text-muted-foreground">Informations complètes de la réunion</p>
            </div>
            <a href="{{ path('app_meet_index') }}" class="btn btn-secondary px-6 py-3 rounded-xl transition-all flex items-center gap-2 font-medium">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Retour
            </a>
        </div>

        <!-- Carte réunion -->
        <div class="card rounded-2xl p-8">
            <div class="mb-6">
                <h2 class="text-2xl font-bold mb-4 flex items-center gap-2">
                    <i data-lucide="video" class="w-6 h-6 text-primary"></i>
                    {{ meet.titre }}
                </h2>
                
                <div class="flex items-center gap-4 mb-4">
                    <div class="flex items-center gap-2">
                        <div class="w-10 h-10 rounded-full bg-muted flex items-center justify-center text-sm font-bold">
                            {{ meet.participant.nom|first|upper }}
                        </div>
                        <span class="font-medium">Prof. {{ meet.participant.nom }} {{ meet.participant.prenom }}</span>
                    </div>
                    {% if meet.participant.role == 'enseignant' %}
                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                            <i data-lucide="graduation-cap" class="w-3 h-3"></i>Enseignant
                        </span>
                    {% endif %}
                </div>

                <div class="flex flex-wrap gap-4 text-sm text-muted-foreground mb-6">
                    <div class="flex items-center gap-2 bg-muted/50 px-3 py-1.5 rounded-lg">
                        <i data-lucide="calendar" class="w-4 h-4 text-primary"></i>
                        {{ meet.dateDebut|date('d/m/Y H:i') }}
                    </div>
                    <div class="flex items-center gap-2 bg-muted/50 px-3 py-1.5 rounded-lg">
                        <i data-lucide="clock" class="w-4 h-4 text-primary"></i>
                        {% set diff = meet.dateFin.timestamp - meet.dateDebut.timestamp %}
                        {% set hours = (diff // 3600) %}
                        {% set minutes = ((diff % 3600) // 60) %}
                        {% if hours > 0 %}
                            {{ hours }}h{{ minutes > 0 ? minutes ~ 'min' : '' }}
                        {% else %}
                            {{ minutes }}min
                        {% endif %}
                    </div>
                    <div class="flex items-center gap-2 bg-muted/50 px-3 py-1.5 rounded-lg">
                        <i data-lucide="calendar-check" class="w-4 h-4 text-primary"></i>
                        {{ meet.dateFin|date('d/m/Y H:i') }}
                    </div>
                </div>
            </div>

            {% if meet.description %}
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-3 flex items-center gap-2">
                        <i data-lucide="align-left" class="w-5 h-5 text-primary"></i>
                        Description
                    </h3>
                    <p class="text-muted-foreground bg-muted/30 rounded-lg p-4">{{ meet.description }}</p>
                </div>
            {% endif %}

            {% if meet.lienMeet %}
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-3 flex items-center gap-2">
                        <i data-lucide="link" class="w-5 h-5 text-primary"></i>
                        Lien de la réunion
                    </h3>
                    <a href="{{ meet.lienMeet }}" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline break-all">{{ meet.lienMeet }}</a>
                </div>
            {% endif %}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <h3 class="text-lg font-semibold mb-3 flex items-center gap-2">
                        <i data-lucide="calendar" class="w-5 h-5 text-primary"></i>
                        Date de création
                    </h3>
                    <p class="text-muted-foreground">{{ meet.createdAt ? meet.createdAt|date('d/m/Y H:i') : 'Non défini' }}</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-3 flex items-center gap-2">
                        <i data-lucide="user" class="w-5 h-5 text-primary"></i>
                        Responsable
                    </h3>
                    <p class="text-muted-foreground">{{ meet.participant.nom }} {{ meet.participant.prenom }}</p>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex items-center gap-3 pt-6 border-t border-border">
                {% set isEnded = meet.dateFin <= date() %}
                {% set isNotStarted = meet.dateDebut > date() %}
                {% if isEnded %}
                    <span class="btn btn-secondary px-6 py-3 rounded-xl transition-all flex items-center gap-2 font-medium cursor-not-allowed">
                        <i data-lucide="ban" class="w-5 h-5"></i>
                        Réunion terminée
                    </span>
                {% elseif isNotStarted %}
                    <span class="btn btn-secondary px-6 py-3 rounded-xl transition-all flex items-center gap-2 font-medium cursor-not-allowed">
                        <i data-lucide="clock" class="w-5 h-5"></i>
                        Disponible à {{ meet.dateDebut|date('H:i') }}
                    </span>
                {% else %}
                    <a href="{{ path('app_meet_join', {'id': meet.id}) }}" 
                       class="btn btn-primary px-6 py-3 rounded-xl transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="video" class="w-5 h-5"></i>
                        Rejoindre
                    </a>
                {% endif %}
                
                {% if meet.participant.role == 'enseignant' %}
                    <a href="{{ path('app_meet_edit', {'id': meet.id}) }}" 
                       class="btn btn-secondary px-6 py-3 rounded-xl transition-all flex items-center gap-2 font-medium">
                        <i data-lucide="edit" class="w-5 h-5"></i>
                        Modifier
                    </a>
                    <form method="post" action="{{ path('app_meet_delete', {'id': meet.id }) }}" 
                          style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meet.id) }}">
                        <button type="submit" class="bg-yellow-500 text-white px-6 py-3 rounded-xl hover:bg-yellow-600 transition-all flex items-center gap-2 font-medium">
                            <i data-lucide="trash-2" class="w-5 h-5"></i>
                            Supprimer
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
    </script>
{% endblock %}
