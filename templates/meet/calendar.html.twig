{% extends 'base_front.html.twig' %}

{% block title %}Calendrier des Réunions{% endblock %}

{% block body %}
<div class="p-8 min-h-full">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <i data-lucide="calendar" class="w-8 h-8 text-primary"></i>
                    <h1 class="text-3xl font-bold">Calendrier des Réunions</h1>
                </div>
                <p class="text-muted-foreground">Vue d'ensemble de toutes les sessions programmées</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('app_meet_index') }}" class="bg-white text-primary border border-primary px-6 py-3 rounded-xl hover:bg-primary/5 transition-all flex items-center gap-2 font-medium">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    Retour aux réunions
                </a>
                <a href="{{ path('app_meet_new') }}" class="bg-primary text-white px-6 py-3 rounded-xl hover:bg-primary/90 transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                    <i data-lucide="plus" class="w-5 h-5"></i>
                    Nouvelle réunion
                </a>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4 flex items-center gap-2">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Navigation du calendrier -->
        <div class="bg-white rounded-2xl shadow-sm border border-border p-6 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <button onclick="changeMonth(-1)" class="p-2 hover:bg-muted rounded-lg transition-colors">
                        <i data-lucide="chevron-left" class="w-5 h-5"></i>
                    </button>
                    <h2 id="currentMonth" class="text-xl font-semibold"></h2>
                    <button onclick="changeMonth(1)" class="p-2 hover:bg-muted rounded-lg transition-colors">
                        <i data-lucide="chevron-right" class="w-5 h-5"></i>
                    </button>
                </div>
                <div class="flex gap-2">
                    <button onclick="goToToday()" class="px-4 py-2 bg-muted rounded-lg hover:bg-muted/80 transition-colors text-sm font-medium">
                        Aujourd'hui
                    </button>
                    <select id="viewMode" onchange="changeViewMode()" class="px-4 py-2 bg-muted rounded-lg hover:bg-muted/80 transition-colors text-sm font-medium">
                        <option value="month">Mois</option>
                        <option value="week">Semaine</option>
                        <option value="day">Jour</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Grille du calendrier -->
        <div id="calendarShell" class="bg-white rounded-2xl shadow-sm border border-border overflow-hidden">
            <div id="calendarHeaders" class="border-b border-border bg-muted/50">
                <!-- Généré par JavaScript -->
            </div>
            <div id="calendarBody">
                <!-- Généré par JavaScript -->
            </div>
        </div>

        <!-- Légende -->
        <div class="mt-6 bg-white rounded-xl border border-border p-4">
            <h3 class="text-sm font-semibold mb-3">Légende</h3>
            <div class="flex flex-wrap gap-4 text-sm">
                <div class="flex items-center gap-2">
                    <div class="w-4 h-4 bg-primary rounded"></div>
                    <span>Réunion en cours</span>
                </div>
                <div class="flex items-center gap-2">
                    <div class="w-4 h-4 bg-secondary rounded"></div>
                    <span>Réunion à venir</span>
                </div>
                <div class="flex items-center gap-2">
                    <div class="w-4 h-4 bg-muted rounded"></div>
                    <span>Réunion terminée</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal détails de réunion -->
<div id="meetModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-xl max-w-md w-full mx-4 p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-semibold">Détails de la réunion</h3>
            <button onclick="closeMeetModal()" class="p-2 hover:bg-muted rounded-lg transition-colors">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>
        </div>
        <div id="modalContent">
            <!-- Contenu généré par JavaScript -->
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Données des réunions
        const meets = {{ meets|json_encode|raw }};
        
        let currentDate = new Date();
        let currentView = 'month';
        
        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            renderCalendar();
            updateMonthHeader();
            
            if (window.lucide) {
                window.lucide.createIcons();
            }
        });
        
        // Fonctions du calendrier
        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            if (currentView === 'month') {
                renderMonthView(year, month);
            } else if (currentView === 'week') {
                renderWeekView(currentDate);
            } else if (currentView === 'day') {
                renderDayView(currentDate);
            }
        }

        function pad2(n) {
            return n.toString().padStart(2, '0');
        }

        function formatTime(date) {
            return `${pad2(date.getHours())}:${pad2(date.getMinutes())}`;
        }

        function startOfWeekMonday(date) {
            const d = new Date(date);
            const day = d.getDay();
            const diff = (day === 0 ? -6 : 1 - day);
            d.setDate(d.getDate() + diff);
            d.setHours(0, 0, 0, 0);
            return d;
        }

        function addDays(date, days) {
            const d = new Date(date);
            d.setDate(d.getDate() + days);
            return d;
        }

        function sameDay(a, b) {
            return a.getFullYear() === b.getFullYear() && a.getMonth() === b.getMonth() && a.getDate() === b.getDate();
        }

        function minutesSinceMidnight(date) {
            return date.getHours() * 60 + date.getMinutes();
        }

        function clamp(n, min, max) {
            return Math.max(min, Math.min(max, n));
        }
        
        function renderMonthView(year, month) {
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const prevLastDay = new Date(year, month, 0);
            
            const firstDayOfWeek = firstDay.getDay() || 7; // Dimanche = 7
            const lastDateOfMonth = lastDay.getDate();
            const prevLastDateOfMonth = prevLastDay.getDate();
            
            // En-têtes des jours
            const headers = document.getElementById('calendarHeaders');
            const body = document.getElementById('calendarBody');
            headers.innerHTML = `
                <div class="grid grid-cols-7">
                    <div class="p-3 text-center text-sm font-semibold text-muted-foreground border-r border-border">Lun</div>
                    <div class="p-3 text-center text-sm font-semibold text-muted-foreground border-r border-border">Mar</div>
                    <div class="p-3 text-center text-sm font-semibold text-muted-foreground border-r border-border">Mer</div>
                    <div class="p-3 text-center text-sm font-semibold text-muted-foreground border-r border-border">Jeu</div>
                    <div class="p-3 text-center text-sm font-semibold text-muted-foreground border-r border-border">Ven</div>
                    <div class="p-3 text-center text-sm font-semibold text-muted-foreground border-r border-border">Sam</div>
                    <div class="p-3 text-center text-sm font-semibold text-muted-foreground">Dim</div>
                </div>
            `;
            body.innerHTML = '<div id="calendarDays" class="grid grid-cols-7"></div>';
            const daysContainer = document.getElementById('calendarDays');
            
            let html = '';
            let dayCount = 1;
            
            // Jours du mois précédent
            for (let i = firstDayOfWeek - 1; i > 0; i--) {
                const day = prevLastDateOfMonth - i + 1;
                html += `<div class="min-h-[100px] p-2 border-r border-b border-border bg-muted/20 text-muted-foreground">
                    <div class="text-sm font-medium">${day}</div>
                </div>`;
            }
            
            // Jours du mois actuel
            for (let day = 1; day <= lastDateOfMonth; day++) {
                const currentDay = new Date(year, month, day);
                const dayMeets = getMeetsForDay(currentDay);
                const isToday = isCurrentDay(currentDay);
                
                html += `<div class="min-h-[100px] p-2 border-r border-b border-border ${isToday ? 'bg-primary/5' : ''} hover:bg-muted/30 transition-colors cursor-pointer" onclick="showDayDetails(${year}, ${month}, ${day})">
                    <div class="text-sm font-medium ${isToday ? 'text-primary' : ''}">${day}</div>
                    <div class="mt-1 space-y-1">`;
                
                dayMeets.forEach(meet => {
                    const status = getMeetStatus(meet);
                    const colorClass = status === 'current' ? 'bg-primary' : (status === 'upcoming' ? 'bg-secondary' : 'bg-muted');
                    
                    html += `<div class="text-xs p-1 rounded ${colorClass} text-white truncate cursor-pointer hover:opacity-80" onclick="showMeetDetails(event, ${meet.id})" title="${meet.titre}">
                        ${meet.titre}
                    </div>`;
                });
                
                html += `</div></div>`;
            }
            
            // Jours du mois suivant
            const remainingDays = 42 - (firstDayOfWeek - 1 + lastDateOfMonth);
            for (let day = 1; day <= remainingDays; day++) {
                html += `<div class="min-h-[100px] p-2 border-r border-b border-border bg-muted/20 text-muted-foreground">
                    <div class="text-sm font-medium">${day}</div>
                </div>`;
            }
            
            daysContainer.innerHTML = html;
        }

        function renderWeekView(date) {
            const weekStart = startOfWeekMonday(date);
            const headers = document.getElementById('calendarHeaders');
            const body = document.getElementById('calendarBody');

            const dayNames = ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'];
            let headerHtml = '<div class="grid" style="grid-template-columns: 72px repeat(7, minmax(0, 1fr));">';
            headerHtml += '<div class="p-3 text-xs font-semibold text-muted-foreground border-r border-border">Heure</div>';
            for (let i = 0; i < 7; i++) {
                const d = addDays(weekStart, i);
                const isToday = sameDay(d, new Date());
                headerHtml += `
                    <div class="p-3 border-r border-border last:border-r-0 ${isToday ? 'bg-primary/5' : ''}">
                        <div class="text-xs text-muted-foreground font-semibold">${dayNames[i]}</div>
                        <div class="text-sm font-semibold ${isToday ? 'text-primary' : ''}">${d.getDate()}/${pad2(d.getMonth() + 1)}</div>
                    </div>
                `;
            }
            headerHtml += '</div>';
            headers.innerHTML = headerHtml;

            const startHour = 7;
            const endHour = 20;
            const hourHeight = 56; // px par heure
            const minutePx = hourHeight / 60;
            const totalHeight = (endHour - startHour) * hourHeight;

            let bodyHtml = `<div class="grid" style="grid-template-columns: 72px repeat(7, minmax(0, 1fr));">`;
            // colonne heures
            bodyHtml += `<div class="border-r border-border">
                <div class="relative" style="height:${totalHeight}px;">`;
            for (let h = startHour; h <= endHour; h++) {
                const top = (h - startHour) * hourHeight;
                bodyHtml += `
                    <div class="absolute left-0 right-0" style="top:${top}px;">
                        <div class="-translate-y-1/2 px-3 text-xs text-muted-foreground">${pad2(h)}:00</div>
                    </div>
                `;
            }
            bodyHtml += `</div></div>`;

            // colonnes jours
            for (let i = 0; i < 7; i++) {
                const d = addDays(weekStart, i);
                const isToday = sameDay(d, new Date());
                bodyHtml += `<div class="border-r border-border last:border-r-0">
                    <div class="relative ${isToday ? 'bg-primary/5' : ''}" style="height:${totalHeight}px;">`;

                // lignes horizontales
                for (let h = startHour; h <= endHour; h++) {
                    const top = (h - startHour) * hourHeight;
                    bodyHtml += `<div class="absolute left-0 right-0 border-t border-border/60" style="top:${top}px;"></div>`;
                }

                // events
                const dayStart = new Date(d);
                dayStart.setHours(0, 0, 0, 0);
                const dayEnd = new Date(d);
                dayEnd.setHours(23, 59, 59, 999);

                const events = meets
                    .map(m => ({
                        ...m,
                        _start: new Date(m.dateDebut),
                        _end: new Date(m.dateFin),
                    }))
                    .filter(m => m._start <= dayEnd && m._end >= dayStart);

                events.forEach(meet => {
                    const start = new Date(Math.max(meet._start.getTime(), new Date(d.getFullYear(), d.getMonth(), d.getDate(), startHour, 0, 0, 0).getTime()));
                    const end = new Date(Math.min(meet._end.getTime(), new Date(d.getFullYear(), d.getMonth(), d.getDate(), endHour, 0, 0, 0).getTime()));
                    const startMin = clamp(minutesSinceMidnight(start), startHour * 60, endHour * 60);
                    const endMin = clamp(minutesSinceMidnight(end), startHour * 60, endHour * 60);
                    const top = (startMin - startHour * 60) * minutePx;
                    const height = Math.max(18, (endMin - startMin) * minutePx);
                    const status = getMeetStatus(meet);
                    const bg = status === 'current' ? 'bg-primary' : (status === 'upcoming' ? 'bg-secondary' : 'bg-muted');

                    bodyHtml += `
                        <div class="absolute left-2 right-2 ${bg} text-white rounded-lg shadow-sm p-2 cursor-pointer hover:opacity-90" style="top:${top}px;height:${height}px;" onclick="showMeetDetails(event, ${meet.id})">
                            <div class="text-xs font-semibold truncate">${meet.titre}</div>
                            <div class="text-[11px] opacity-95 truncate">Prof. ${meet.participant.nom} ${meet.participant.prenom}</div>
                            <div class="text-[11px] opacity-90">${formatTime(meet._start)} - ${formatTime(meet._end)}</div>
                        </div>
                    `;
                });

                bodyHtml += `</div></div>`;
            }

            bodyHtml += `</div>`;
            body.innerHTML = bodyHtml;
        }

        function renderDayView(date) {
            const headers = document.getElementById('calendarHeaders');
            const body = document.getElementById('calendarBody');

            const isToday = sameDay(date, new Date());
            headers.innerHTML = `
                <div class="grid" style="grid-template-columns: 72px minmax(0, 1fr);">
                    <div class="p-3 text-xs font-semibold text-muted-foreground border-r border-border">Heure</div>
                    <div class="p-3 ${isToday ? 'bg-primary/5' : ''}">
                        <div class="text-xs text-muted-foreground font-semibold">Jour</div>
                        <div class="text-sm font-semibold ${isToday ? 'text-primary' : ''}">${date.toLocaleDateString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}</div>
                    </div>
                </div>
            `;

            const startHour = 7;
            const endHour = 20;
            const hourHeight = 56;
            const minutePx = hourHeight / 60;
            const totalHeight = (endHour - startHour) * hourHeight;

            const dayStart = new Date(date);
            dayStart.setHours(0, 0, 0, 0);
            const dayEnd = new Date(date);
            dayEnd.setHours(23, 59, 59, 999);

            const events = meets
                .map(m => ({
                    ...m,
                    _start: new Date(m.dateDebut),
                    _end: new Date(m.dateFin),
                }))
                .filter(m => m._start <= dayEnd && m._end >= dayStart);

            let bodyHtml = `<div class="grid" style="grid-template-columns: 72px minmax(0, 1fr);">`;
            // colonne heures
            bodyHtml += `<div class="border-r border-border">
                <div class="relative" style="height:${totalHeight}px;">`;
            for (let h = startHour; h <= endHour; h++) {
                const top = (h - startHour) * hourHeight;
                bodyHtml += `
                    <div class="absolute left-0 right-0" style="top:${top}px;">
                        <div class="-translate-y-1/2 px-3 text-xs text-muted-foreground">${pad2(h)}:00</div>
                    </div>
                `;
            }
            bodyHtml += `</div></div>`;

            // colonne jour
            bodyHtml += `<div>
                <div class="relative ${isToday ? 'bg-primary/5' : ''}" style="height:${totalHeight}px;">`;
            for (let h = startHour; h <= endHour; h++) {
                const top = (h - startHour) * hourHeight;
                bodyHtml += `<div class="absolute left-0 right-0 border-t border-border/60" style="top:${top}px;"></div>`;
            }

            events.forEach(meet => {
                const start = new Date(Math.max(meet._start.getTime(), new Date(date.getFullYear(), date.getMonth(), date.getDate(), startHour, 0, 0, 0).getTime()));
                const end = new Date(Math.min(meet._end.getTime(), new Date(date.getFullYear(), date.getMonth(), date.getDate(), endHour, 0, 0, 0).getTime()));
                const startMin = clamp(minutesSinceMidnight(start), startHour * 60, endHour * 60);
                const endMin = clamp(minutesSinceMidnight(end), startHour * 60, endHour * 60);
                const top = (startMin - startHour * 60) * minutePx;
                const height = Math.max(18, (endMin - startMin) * minutePx);
                const status = getMeetStatus(meet);
                const bg = status === 'current' ? 'bg-primary' : (status === 'upcoming' ? 'bg-secondary' : 'bg-muted');

                bodyHtml += `
                    <div class="absolute left-3 right-3 ${bg} text-white rounded-lg shadow-sm p-3 cursor-pointer hover:opacity-90" style="top:${top}px;height:${height}px;" onclick="showMeetDetails(event, ${meet.id})">
                        <div class="text-sm font-semibold truncate">${meet.titre}</div>
                        <div class="text-xs opacity-95 truncate">Prof. ${meet.participant.nom} ${meet.participant.prenom}</div>
                        <div class="text-xs opacity-90">${formatTime(meet._start)} - ${formatTime(meet._end)}</div>
                    </div>
                `;
            });

            bodyHtml += `</div></div></div>`;
            body.innerHTML = bodyHtml;
        }
        
        function getMeetsForDay(date) {
            return meets.filter(meet => {
                const meetDate = new Date(meet.dateDebut);
                return meetDate.toDateString() === date.toDateString();
            });
        }
        
        function getMeetStatus(meet) {
            const now = new Date();
            const startDate = new Date(meet.dateDebut);
            const endDate = new Date(meet.dateFin);
            
            if (now >= startDate && now <= endDate) return 'current';
            if (now < startDate) return 'upcoming';
            return 'completed';
        }
        
        function isCurrentDay(date) {
            const today = new Date();
            return date.toDateString() === today.toDateString();
        }
        
        function showMeetDetails(event, meetId) {
            event.stopPropagation();
            const meet = meets.find(m => m.id === meetId);
            if (!meet) return;
            
            const modal = document.getElementById('meetModal');
            const content = document.getElementById('modalContent');
            
            const startDate = new Date(meet.dateDebut);
            const endDate = new Date(meet.dateFin);
            const status = getMeetStatus(meet);
            const statusText = status === 'current' ? 'En cours' : (status === 'upcoming' ? 'À venir' : 'Terminée');
            const statusColor = status === 'current' ? 'text-green-600' : (status === 'upcoming' ? 'text-blue-600' : 'text-gray-600');
            
            content.innerHTML = `
                <div class="space-y-4">
                    <div>
                        <h4 class="font-semibold text-lg">${meet.titre}</h4>
                        <span class="inline-block px-2 py-1 text-xs rounded-full ${statusColor} bg-opacity-10 ${statusColor.replace('text', 'bg')}">${statusText}</span>
                    </div>
                    
                    <div class="space-y-2">
                        <div class="flex items-center gap-2">
                            <i data-lucide="user" class="w-4 h-4 text-muted-foreground"></i>
                            <span class="text-sm">Prof. ${meet.participant.nom} ${meet.participant.prenom}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i data-lucide="calendar" class="w-4 h-4 text-muted-foreground"></i>
                            <span class="text-sm">${startDate.toLocaleDateString('fr-FR')}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i data-lucide="clock" class="w-4 h-4 text-muted-foreground"></i>
                            <span class="text-sm">${startDate.toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'})} - ${endDate.toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'})}</span>
                        </div>
                        ${meet.lienMeet ? `
                        <div class="flex items-center gap-2">
                            <i data-lucide="link" class="w-4 h-4 text-muted-foreground"></i>
                            <a href="${meet.lienMeet}" target="_blank" class="text-sm text-primary hover:underline">Rejoindre la réunion</a>
                        </div>
                        ` : ''}
                    </div>
                    
                    ${meet.description ? `
                    <div>
                        <p class="text-sm text-muted-foreground">${meet.description}</p>
                    </div>
                    ` : ''}
                    
                    <div class="flex gap-2 pt-2">
                        <a href="{{ path('app_meet_show', {'id': '__ID__'}) }}" class="flex-1 bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/90 transition-colors text-sm text-center" data-meet-show-link>
                            Voir détails
                        </a>
                        <button onclick="closeMeetModal()" class="flex-1 bg-muted px-4 py-2 rounded-lg hover:bg-muted/80 transition-colors text-sm">
                            Fermer
                        </button>
                    </div>
                </div>
            `;

            const showLink = content.querySelector('[data-meet-show-link]');
            if (showLink) {
                showLink.href = showLink.href.replace('__ID__', String(meet.id));
            }
            
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            
            // Recréer les icônes dans le modal
            setTimeout(() => {
                if (window.lucide) {
                    window.lucide.createIcons();
                }
            }, 100);
        }
        
        function closeMeetModal() {
            const modal = document.getElementById('meetModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }
        
        function changeMonth(direction) {
            if (currentView === 'month') {
                currentDate.setMonth(currentDate.getMonth() + direction);
            } else if (currentView === 'week') {
                currentDate.setDate(currentDate.getDate() + direction * 7);
            } else {
                currentDate.setDate(currentDate.getDate() + direction);
            }
            renderCalendar();
            updateMonthHeader();
        }
        
        function updateMonthHeader() {
            const monthNames = ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'];
            const header = document.getElementById('currentMonth');
            if (header) {
                if (currentView === 'month') {
                    header.textContent = `${monthNames[currentDate.getMonth()]} ${currentDate.getFullYear()}`;
                } else if (currentView === 'week') {
                    const ws = startOfWeekMonday(currentDate);
                    const we = addDays(ws, 6);
                    header.textContent = `${ws.getDate()}/${pad2(ws.getMonth() + 1)} - ${we.getDate()}/${pad2(we.getMonth() + 1)} ${we.getFullYear()}`;
                } else {
                    header.textContent = currentDate.toLocaleDateString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
                }
            }
        }
        
        function goToToday() {
            currentDate = new Date();
            renderCalendar();
            updateMonthHeader();
        }
        
        function changeViewMode() {
            const select = document.getElementById('viewMode');
            currentView = select.value;
            renderCalendar();
            updateMonthHeader();
        }
        
        function showDayDetails(year, month, day) {
            const date = new Date(year, month, day);
            const dayMeets = getMeetsForDay(date);
            
            if (dayMeets.length === 0) {
                alert(`Aucune réunion le ${date.toLocaleDateString('fr-FR')}`);
                return;
            }
            
            let details = `Réunions du ${date.toLocaleDateString('fr-FR')}:\n\n`;
            dayMeets.forEach((meet, index) => {
                const startDate = new Date(meet.dateDebut);
                const endDate = new Date(meet.dateFin);
                details += `${index + 1}. ${meet.titre}\n`;
                details += `   Prof. ${meet.participant.nom} ${meet.participant.prenom}\n`;
                details += `   ${startDate.toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'})} - ${endDate.toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'})}\n\n`;
            });
            
            alert(details);
        }
        
        // Fermer le modal en cliquant à l'extérieur
        document.getElementById('meetModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeMeetModal();
            }
        });
    </script>
