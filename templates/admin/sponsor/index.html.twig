{% extends 'admin/base_admin.html.twig' %}

{% block title %}Sponsors - Admin{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
    <li class="breadcrumb-item">Sponsors</li>
{% endblock %}

{% block header_title %}Sponsor Management{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
                <h5 class="mb-0">All Sponsors</h5>
                <a href="{{ path('admin_sponsor_new') }}" class="btn btn-primary btn-sm">
                    <i class="feather-plus me-1"></i> Add New Sponsor
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Sponsor</th>
                                <th>Contact</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th class="text-end pe-4">Reports & Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for sponsor in sponsors %}
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text bg-primary-subtle text-primary">
                                            {{ sponsor.nom|slice(0, 1)|upper }}
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">{{ sponsor.nom }}</div>
                                            <div class="fs-12 text-muted">{{ sponsor.siteWeb }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fs-13 fw-medium text-dark">{{ sponsor.contactPersonne }}</div>
                                    <div class="fs-12 text-muted">{{ sponsor.contactEmail }}</div>
                                </td>
                                <td>
                                    <span class="badge bg-gray-100 text-gray-700 border">{{ sponsor.type|capitalize }}</span>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">{{ sponsor.montant }} â‚¬</div>
                                </td>
                                <td>
                                    <span class="badge bg-{{ sponsor.statut == 'actif' ? 'success' : 'warning' }}-subtle text-{{ sponsor.statut == 'actif' ? 'success' : 'warning' }}">
                                        {{ sponsor.statut|capitalize }}
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <!-- Export Buttons -->
                                        <div class="btn-group btn-group-sm me-2">
                                            <a href="{{ path('admin_sponsor_export_pdf', {id: sponsor.id}) }}" class="btn btn-outline-danger" title="Export PDF">
                                                <i class="feather-file-text"></i> PDF
                                            </a>
                                            <a href="{{ path('admin_sponsor_export_excel', {id: sponsor.id}) }}" class="btn btn-outline-success" title="Export Excel">
                                                <i class="feather-file"></i> Excel
                                            </a>
                                        </div>
                                        
                                        <a href="{{ path('admin_sponsor_show', {'id': sponsor.id}) }}" class="btn btn-sm btn-light-primary">
                                            <i class="feather-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_sponsor_edit', {'id': sponsor.id}) }}" class="btn btn-sm btn-light-info">
                                            <i class="feather-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">No sponsors found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
