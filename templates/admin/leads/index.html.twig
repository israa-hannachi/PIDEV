{% extends 'admin/base_admin.html.twig' %}

{% block title %}Leads - Naja7ni Admin{% endblock %}

{% block header_title %}Leads{% endblock %}

{% block body %}
    <div class="card stretch stretch-full border-0 shadow-sm">
        <div class="card-header">
            <h5 class="card-title">Latest Leads</h5>
        </div>
        <div class="card-body custom-card-action p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Proposal</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lead in leads %}
                            <tr>
                                <td>{{ lead.name }}</td>
                                <td>{{ lead.email }}</td>
                                <td>{{ lead.proposal }}</td>
                                <td>{{ lead.date }}</td>
                                <td>
                                    <span class="badge bg-light-primary text-primary">{{ lead.status }}</span>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">No leads found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {% if pagination.pageCount > 1 %}
                <div class="d-flex justify-content-center mt-4">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            {% for i in 1..pagination.pageCount %}
                                <li class="page-item {{ pagination.currentPageNumber == i ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('app_latest_leads', {page: i}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
