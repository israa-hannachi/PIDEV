<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'form'}} ) }}

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    {% if form.titre.vars.errors %}
                        <div class="alert alert-danger mt-2">
                            {% for error in form.titre.vars.errors %}{{ error.message }}{% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.lieu) }}
                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {% if form.description.vars.errors %}
                <div class="alert alert-danger mt-2">
                    {% for error in form.description.vars.errors %}{{ error.message }}{% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.dateDebut) }}
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                    {% if form.dateDebut.vars.errors %}
                        <div class="alert alert-danger mt-2">
                            {% for error in form.dateDebut.vars.errors %}{{ error.message }}{% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.dateFin) }}
                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                    {% if form.dateFin.vars.errors %}
                        <div class="alert alert-danger mt-2">
                            {% for error in form.dateFin.vars.errors %}{{ error.message }}{% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    {{ form_label(form.capacite) }}
                    {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    {{ form_label(form.prix) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    {{ form_label(form.statut) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.categorie) }}
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 d-sm-flex">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-save me-2"></i>{{ button_label|default('Save') }}
            </button>
            <a href="{{ path('admin_event_index') }}" class="btn btn-secondary">Cancel</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>

