{% extends 'admin/base_admin.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ event.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ event.dateCreation ? event.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ event.dateFin ? event.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ event.capacite }}</td>
            </tr>
            <tr>
                <th>Inscrits</th>
                <td>{{ event.inscrits }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ event.categorie }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ event.prix }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ event.statut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_event_index') }}">back to list</a>

    <a href="{{ path('admin_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('admin/event/_delete_form.html.twig') }}
{% endblock %}
