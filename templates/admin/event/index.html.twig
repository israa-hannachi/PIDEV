{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Events - Admin{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
    <li class="breadcrumb-item">Events</li>
{% endblock %}

{% block header_title %}Event Management & Statistics{% endblock %}

{% block body %}
    <div class="main-content">
        <!-- Statistics Section -->
        <div class="row mb-5">
            <div class="col-lg-3 col-md-6">
                <div class="card stretch stretch-full border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-text bg-primary-subtle text-primary">
                                <i class="feather-calendar"></i>
                            </div>
                            <div>
                                <div class="fs-5 fw-bold text-dark">{{ total_events }}</div>
                                <h3 class="fs-11 fw-semibold text-muted mb-0">Total Events</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card stretch stretch-full border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-text bg-info-subtle text-info">
                                <i class="feather-users"></i>
                            </div>
                            <div>
                                <div class="fs-5 fw-bold text-dark">{{ total_registrations }}</div>
                                <h3 class="fs-11 fw-semibold text-muted mb-0">Registrations</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card stretch stretch-full border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-text bg-success-subtle text-success">
                                <i class="feather-dollar-sign"></i>
                            </div>
                            <div>
                                <div class="fs-5 fw-bold text-dark">{{ total_revenue|number_format(2, '.', ' ') }} €</div>
                                <h3 class="fs-11 fw-semibold text-muted mb-0">Confirmed Revenue</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card stretch stretch-full border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-text bg-warning-subtle text-warning">
                                <i class="feather-award"></i>
                            </div>
                            <div>
                                <div class="fs-5 fw-bold text-dark">{{ total_sponsorship|number_format(2, '.', ' ') }} €</div>
                                <h3 class="fs-11 fw-semibold text-muted mb-0">Sponsorship Total</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card stretch stretch-full border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="card-title">Event Distribution by Category</h5>
                    </div>
                    <div class="card-body">
                        <div style="max-height: 250px;">
                            <canvas id="categoriesChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Events List -->
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
                <h5 class="mb-0">All Events</h5>
                <a href="{{ path('admin_event_new') }}" class="btn btn-primary btn-sm">
                    <i class="feather-plus me-1"></i> Create New Event
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted uppercase fs-10 fw-bold tracking-wider">
                            <tr>
                                <th class="ps-4">Event Details</th>
                                <th>Category</th>
                                <th>Schedule</th>
                                <th>Capacity</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        {% if event.image %}
                                            <img src="{{ event.image }}" class="rounded-lg object-cover" width="48" height="48" alt="">
                                        {% else %}
                                            <div class="avatar-text bg-gray-100 text-gray-500 rounded-lg" style="width: 48px; height: 48px;">
                                                <i class="feather-image"></i>
                                            </div>
                                        {% endif %}
                                        <div>
                                            <div class="fw-bold text-dark line-clamp-1">{{ event.titre }}</div>
                                            <div class="fs-12 text-muted"><i class="feather-map-pin me-1"></i>{{ event.lieu }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle">{{ event.categorie }}</span>
                                </td>
                                <td>
                                    <div class="fs-13 fw-medium text-dark">{{ event.dateDebut|date('d M, Y') }}</div>
                                    <div class="fs-12 text-muted">{{ event.dateDebut|date('H:i') }} - {{ event.dateFin|date('H:i') }}</div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="fw-bold text-dark">{{ event.inscrits }}/{{ event.capacite }}</div>
                                        {% set percent = (event.inscrits / event.capacite * 100)|round %}
                                        <div class="progress flex-grow-1 ht-4" style="min-width: 60px;">
                                            <div class="progress-bar bg-{{ percent > 90 ? 'danger' : (percent > 70 ? 'warning' : 'success') }}" role="progressbar" style="width: {{ percent }}%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">{{ event.prix > 0 ? event.prix ~ ' €' : 'Free' }}</div>
                                </td>
                                <td>
                                    <span class="badge bg-{{ event.statut == 'planifié' ? 'warning' : 'success' }}-subtle text-{{ event.statut == 'planifié' ? 'warning' : 'success' }}">
                                        {{ event.statut|capitalize }}
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="{{ path('admin_event_show', {'id': event.id}) }}" class="btn btn-sm btn-light-primary" title="View Details">
                                            <i class="feather-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_event_edit', {'id': event.id}) }}" class="btn btn-sm btn-light-info" title="Edit Event">
                                            <i class="feather-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">No events found. Start by creating your first event!</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Categories Chart
            const catCtx = document.getElementById('categoriesChart').getContext('2d');
            new Chart(catCtx, {
                type: 'doughnut',
                data: {
                    labels: {{ stats_category_labels|json_encode|raw }},
                    datasets: [{
                        data: {{ stats_category_data|json_encode|raw }},
                        backgroundColor: ['#6366f1', '#ec4899', '#f59e0b', '#10b981', '#3b82f6', '#8b5cf6']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { 
                            position: 'right', 
                            labels: { 
                                boxWidth: 12, 
                                padding: 20,
                                font: { size: 12 }
                            } 
                        } 
                    }
                }
            });
        });
    </script>
{% endblock %}
