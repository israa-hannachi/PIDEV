{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Categories - Admin{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_event_index') }}">Dashboard</a></li>
    <li class="breadcrumb-item">Categories</li>
{% endblock %}

{% block header_title %}Category Management{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
                <h5 class="mb-0">All Categories</h5>
                <a href="{{ path('admin_categorie_new') }}" class="btn btn-primary btn-sm">
                    <i class="feather-plus me-1"></i> Create New Category
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted uppercase fs-10 fw-bold tracking-wider">
                            <tr>
                                <th class="ps-4">Category Details</th>
                                <th>Modules Count</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text bg-primary-subtle text-primary rounded-lg" style="width: 40px; height: 40px;">
                                            <i class="feather-tag"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">{{ categorie.nom }}</div>
                                            <div class="fs-12 text-muted line-clamp-1">{{ categorie.description|default('No description') }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info-subtle text-info border border-info-subtle">{{ categorie.modules|length }} Modules</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="{{ path('admin_categorie_show', {'id': categorie.id}) }}" class="btn btn-sm btn-light-primary" title="Details">
                                            <i class="feather-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-light-info" title="Edit">
                                            <i class="feather-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">No categories found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
