{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Modules - Admin{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_event_index') }}">Dashboard</a></li>
    <li class="breadcrumb-item">Modules</li>
{% endblock %}

{% block header_title %}Module Management{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
                <h5 class="mb-0">All Modules</h5>
                <a href="{{ path('admin_module_new') }}" class="btn btn-primary btn-sm">
                    <i class="feather-plus me-1"></i> Create New Module
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted uppercase fs-10 fw-bold tracking-wider">
                            <tr>
                                <th class="ps-4">Module Details</th>
                                <th>Category</th>
                                <th>Duration</th>
                                <th>Level</th>
                                <th>Status</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for module in modules %}
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text bg-warning-subtle text-warning rounded-lg" style="width: 40px; height: 40px;">
                                            <i class="feather-box"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">{{ module.titre }}</div>
                                            <div class="fs-12 text-muted line-clamp-1">{{ module.description|default('No description') }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">{{ module.categorie }}</span>
                                </td>
                                <td>
                                    <div class="fs-13 fw-medium text-dark">{{ module.duree }}h</div>
                                </td>
                                <td>
                                    <span class="badge bg-info-subtle text-info border border-info-subtle">{{ module.niveau }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-{{ module.actif ? 'success' : 'danger' }}-subtle text-{{ module.actif ? 'success' : 'danger' }}">
                                        {{ module.actif ? 'Active' : 'Inactive' }}
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="{{ path('admin_module_show', {'id': module.id}) }}" class="btn btn-sm btn-light-primary" title="Details">
                                            <i class="feather-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_module_edit', {'id': module.id}) }}" class="btn btn-sm btn-light-info" title="Edit">
                                            <i class="feather-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">No modules found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
