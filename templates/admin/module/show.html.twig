{% extends 'admin/base_admin.html.twig' %}

{% block title %}Module Details - {{ module.titre }}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin_module_index') }}">Modules</a></li>
    <li class="breadcrumb-item active">Details</li>
{% endblock %}

{% block header_title %}Module Information{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">{{ module.titre }}</h5>
                        <div class="d-flex gap-2">
                            <a href="{{ path('admin_cours_new') }}?module={{ module.id }}" class="btn btn-primary btn-sm">
                                <i class="feather-plus me-1"></i> Add Course
                            </a>
                            <a href="{{ path('admin_module_edit', {'id': module.id}) }}" class="btn btn-light btn-sm text-primary">
                                <i class="feather-edit me-1"></i> Edit Module
                            </a>
                            {{ include('module/_delete_form.html.twig') }}
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row mb-4">
                            <div class="col-md-8">
                                <h6 class="text-uppercase text-muted fw-bold fs-11 mb-2">Description</h6>
                                <p class="text-dark">{{ module.description ? module.description : 'No description available.' }}</p>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 bg-light rounded border border-light-subtle">
                                    <h6 class="text-uppercase text-muted fw-bold fs-11 mb-3">Quick Info</h6>
                                    <div class="d-flex justify-content-between mb-2 fs-14">
                                        <span class="text-muted">Category:</span>
                                        <a href="{{ path('admin_categorie_show', {'id': module.categorie.id}) }}" class="fw-bold text-decoration-none text-primary">
                                            {{ module.categorie.nom }}
                                        </a>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2 fs-14">
                                        <span class="text-muted">Level:</span>
                                        <span class="fw-bold">{{ module.niveau }}</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2 fs-14">
                                        <span class="text-muted">Duration:</span>
                                        <span class="fw-bold">{{ module.duree }}h</span>
                                    </div>
                                    <div class="d-flex justify-content-between fs-14">
                                        <span class="text-muted">Status:</span>
                                        {% if module.actif %}
                                            <span class="badge bg-success-subtle text-success">Active</span>
                                        {% else %}
                                            <span class="badge bg-danger-subtle text-danger">Inactive</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pt-4 border-t">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h6 class="text-uppercase text-muted fw-bold fs-11 mb-0">Linked Courses ({{ module.cours|length }})</h6>
                                <div class="dropdown">
                                    {% set _sort = sort_cours|default('date_desc') %}
                                    {% set _sortLabel = _sort == 'alpha_asc' ? 'A → Z' : (_sort == 'alpha_desc' ? 'Z → A' : 'Recent') %}
                                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Sort: {{ _sortLabel }}
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                        <li><a class="dropdown-item fs-13" href="{{ path('admin_module_show', {'id': module.id, 'sort_cours': 'date_desc'}) }}">Recent First</a></li>
                                        <li><a class="dropdown-item fs-13" href="{{ path('admin_module_show', {'id': module.id, 'sort_cours': 'alpha_asc'}) }}">A → Z</a></li>
                                        <li><a class="dropdown-item fs-13" href="{{ path('admin_module_show', {'id': module.id, 'sort_cours': 'alpha_desc'}) }}">Z → A</a></li>
                                    </ul>
                                </div>
                            </div>

                            {% if module.cours|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle border-light">
                                        <thead class="bg-light-subtle bg-opacity-50">
                                            <tr>
                                                <th class="fs-12 text-uppercase fw-bold text-muted py-3 border-0">Course Title</th>
                                                <th class="fs-12 text-uppercase fw-bold text-muted py-3 border-0">Type</th>
                                                <th class="fs-12 text-uppercase fw-bold text-muted py-3 border-0 text-center">Duration</th>
                                                <th class="fs-12 text-uppercase fw-bold text-muted py-3 border-0 text-end">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for cour in module.cours %}
                                                <tr>
                                                    <td class="py-3">
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar avatar-xs bg-primary-subtle rounded text-primary border border-primary-subtle me-3 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                                <i class="feather-book-open fs-14"></i>
                                                            </div>
                                                            <div>
                                                                <div class="fw-bold text-dark">{{ cour.titre }}</div>
                                                                <div class="text-muted fs-11">Order: #{{ cour.ordre }}</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        {% if cour.contenu %}
                                                            <span class="badge bg-blue-subtle text-blue border border-blue-subtle">Text</span>
                                                        {% elseif cour.fichierContenu %}
                                                            <span class="badge bg-purple-subtle text-purple border border-purple-subtle">File</span>
                                                        {% else %}
                                                            <span class="badge bg-light text-muted border">None</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="fs-13 text-muted fw-medium">{{ cour.duree }} min</span>
                                                    </td>
                                                    <td class="text-end">
                                                        <div class="d-flex justify-content-end gap-2">
                                                            <a href="{{ path('admin_cours_show', {'id': cour.id}) }}" class="btn btn-icon btn-sm btn-light text-primary" title="View">
                                                                <i class="feather-eye"></i>
                                                            </a>
                                                            <a href="{{ path('admin_cours_edit', {'id': cour.id}) }}" class="btn btn-icon btn-sm btn-light text-warning" title="Edit">
                                                                <i class="feather-edit"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-light border text-center py-5">
                                    <div class="mb-3">
                                        <i class="feather-inbox fs-48 text-muted opacity-50"></i>
                                    </div>
                                    <h6 class="text-muted mb-0">No courses listed for this module yet.</h6>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
