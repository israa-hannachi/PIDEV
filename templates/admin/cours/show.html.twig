{% extends 'admin/base_admin.html.twig' %}

{% block title %}Course Details - {{ cour.titre }}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin_cours_index') }}">Courses</a></li>
    <li class="breadcrumb-item active">Details</li>
{% endblock %}

{% block header_title %}Course Information{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="row">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">{{ cour.titre }}</h5>
                        <div class="d-flex gap-2">
                            <a href="{{ path('admin_cours_edit', {'id': cour.id}) }}" class="btn btn-primary btn-sm">
                                <i class="feather-edit me-1"></i> Edit
                            </a>
                            {{ include('cours/_delete_form.html.twig') }}
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <h6 class="text-uppercase text-muted fw-bold fs-11 mb-2">Description</h6>
                            <p class="text-dark">{{ cour.description ? cour.description : 'No description available.' }}</p>
                        </div>

                        <div class="mb-4 pt-3 border-t">
                            <h6 class="text-uppercase text-muted fw-bold fs-11 mb-3">Content</h6>
                            {% if cour.contenu %}
                                <div class="p-3 bg-light rounded text-dark fs-14 prose max-w-none">
                                    {{ cour.contenu|raw }}
                                </div>
                            {% elseif cour.fichierContenu %}
                                {% set fileUrl = asset('uploads/cours_fichiers/' ~ cour.fichierContenu) %}
                                {% set ext = (cour.fichierContenu|split('.')|last)|lower %}
                                <div class="d-flex align-items-center p-3 bg-primary-subtle rounded border border-primary-subtle">
                                    <div class="me-3">
                                        <i class="feather-file text-primary fs-24"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold text-primary">{{ cour.fichierContenu }}</div>
                                        <div class="fs-12 text-primary-emphasis">Uploaded Content File</div>
                                    </div>
                                    <a href="{{ fileUrl }}" target="_blank" class="btn btn-primary btn-sm">
                                        <i class="feather-download me-1"></i> Download
                                    </a>
                                </div>
                                
                                {% if ext in ['png', 'jpg', 'jpeg', 'gif', 'webp'] %}
                                    <div class="mt-4 text-center">
                                        <img src="{{ fileUrl }}" alt="{{ cour.titre }}" class="img-fluid rounded border shadow-sm" style="max-height: 400px;" />
                                    </div>
                                {% elseif ext == 'pdf' %}
                                    <div class="mt-4 rounded border overflow-hidden" style="height: 500px;">
                                        <iframe src="{{ fileUrl }}" class="w-100 h-100" title="{{ cour.titre }}"></iframe>
                                    </div>
                                {% endif %}
                            {% else %}
                                <div class="alert alert-light border text-center py-4">
                                    <i class="feather-alert-circle text-muted mb-2 fs-24 d-block"></i>
                                    <span class="text-muted">No content defined for this course.</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">Details</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <span class="text-muted"><i class="feather-clock me-2"></i> Duration</span>
                                <span class="fw-bold">{{ cour.duree }} minutes</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <span class="text-muted"><i class="feather-list me-2"></i> Order</span>
                                <span class="badge bg-secondary">#{{ cour.ordre }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <span class="text-muted"><i class="feather-box me-2"></i> Module</span>
                                <a href="{{ path('admin_module_show', {'id': cour.module.id}) }}" class="fw-bold text-primary text-decoration-none">
                                    {{ cour.module.titre }} <i class="feather-external-link ms-1 fs-12"></i>
                                </a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <span class="text-muted"><i class="feather-info me-2"></i> Status</span>
                                {% if cour.actif %}
                                    <span class="badge bg-success-subtle text-success border border-success-subtle">Active</span>
                                {% else %}
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle">Inactive</span>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer bg-white py-3 border-0">
                        <a href="{{ path('admin_cours_index') }}" class="btn btn-light w-100">
                            <i class="feather-arrow-left me-1"></i> Back to Courses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
