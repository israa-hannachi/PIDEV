{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Games - Admin{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_event_index') }}">Dashboard</a></li>
    <li class="breadcrumb-item">Games</li>
{% endblock %}

{% block header_title %}Game Management{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
                <h5 class="mb-0">All Games</h5>
                <div class="d-flex gap-2">
                    <a href="{{ path('games_pdf') }}" class="btn btn-outline-danger btn-sm">
                        <i class="feather-file-text me-1"></i> PDF
                    </a>
                    <a href="{{ path('games_excel') }}" class="btn btn-outline-success btn-sm">
                        <i class="feather-file me-1"></i> Excel
                    </a>
                    <a href="{{ path('admin_game_new') }}" class="btn btn-primary btn-sm">
                        <i class="feather-plus me-1"></i> Create New Game
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted uppercase fs-10 fw-bold tracking-wider">
                            <tr>
                                <th class="ps-4">Game Details</th>
                                <th>Type & Level</th>
                                <th>Course</th>
                                <th>Score Max</th>
                                <th>Duration</th>
                                <th>Attempts</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for game in games %}
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text bg-primary-subtle text-primary rounded-lg" style="width: 40px; height: 40px;">
                                            <i class="feather-play"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">{{ game.titre }}</div>
                                            <div class="fs-12 text-muted">Created: {{ game.createdAt|date('d/m/Y') }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info-subtle text-info border border-info-subtle">{{ game.type }}</span>
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">{{ game.niveau }}</span>
                                </td>
                                <td>
                                    {% if game.cours %}
                                        <span class="text-dark fw-medium">{{ game.cours.titre }}</span>
                                    {% else %}
                                        <span class="text-muted fs-12 italic">None</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">{{ game.scoreMax }}</div>
                                </td>
                                <td>
                                    <div class="fs-13 text-muted">{{ game.duration }}s</div>
                                </td>
                                <td>
                                    <span class="badge bg-{{ game.attemptNumber > 0 ? 'warning' : 'success' }}-subtle text-{{ game.attemptNumber > 0 ? 'warning' : 'success' }}">
                                        {{ game.attemptNumber }}
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-sm btn-light-primary" type="button" data-bs-toggle="collapse" data-bs-target="#questions-{{ game.id }}" title="View Questions">
                                            <i class="feather-eye"></i>
                                        </button>
                                        <a href="{{ path('admin_game_edit', {'id': game.id}) }}" class="btn btn-sm btn-light-info" title="Edit Game">
                                            <i class="feather-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-light-danger" data-bs-toggle="modal" data-bs-target="#deleteGameModal-{{ game.id }}" title="Delete Game">
                                            <i class="feather-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>

                            <!-- Questions Collapse -->
                            <tr class="collapse" id="questions-{{ game.id }}">
                                <td colspan="7" class="bg-light-subtle">
                                    <div class="p-4">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h6 class="mb-0 fw-bold">Questions List</h6>
                                            <a href="{{ path('admin_gamequestion_new', {gameId: game.id}) }}" class="btn btn-xs btn-success">
                                                <i class="feather-plus me-1"></i> Add Question
                                            </a>
                                        </div>
                                        <div class="list-group list-group-flush border rounded overflow-hidden">
                                            {% for question in game.questions %}
                                                <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                                                    <div>
                                                        <div class="fw-medium text-dark">{{ question.questionText }}</div>
                                                        <div class="fs-11 text-success mt-1"><i class="feather-check-circle me-1"></i>Correct: {{ question.correctAnswer }}</div>
                                                    </div>
                                                    <div class="d-flex gap-1">
                                                        <a href="{{ path('admin_gamequestion_edit', {id: question.id}) }}" class="btn btn-xs btn-link text-info" title="Edit">
                                                            <i class="feather-edit"></i>
                                                        </a>
                                                        <button class="btn btn-xs btn-link text-danger" data-bs-toggle="modal" data-bs-target="#deleteQuestionModal-{{ question.id }}" title="Delete">
                                                            <i class="feather-trash"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                <!-- Delete Question Modal -->
                                                <div class="modal fade" id="deleteQuestionModal-{{ question.id }}" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Confirm Deletion</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to delete this question?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <a href="{{ path('admin_gamequestion_delete', {id: question.id}) }}" class="btn btn-danger">Delete</a>
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="list-group-item text-center text-muted py-3">No questions added yet.</div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <!-- Delete Game Modal -->
                            <div class="modal fade" id="deleteGameModal-{{ game.id }}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Delete Game</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete <strong>{{ game.titre }}</strong>?
                                        </div>
                                        <div class="modal-footer">
                                            <a href="{{ path('admin_game_delete', {id: game.id}) }}" class="btn btn-danger">Delete</a>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">No games found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
