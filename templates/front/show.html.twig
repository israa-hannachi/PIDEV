{% extends 'front/base_front.html.twig' %}

{% block title %}{{ event.titre }} - Naja7ni{% endblock %}

{% block body %}
<!-- Breadcrumbs -->
<nav class="flex mb-8" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
            <a href="{{ path('app_front_home') }}" class="inline-flex items-center text-sm font-medium text-muted-foreground hover:text-primary transition-colors">
                <i data-lucide="home" class="w-4 h-4 mr-2"></i>
                Événements
            </a>
        </li>
        <li aria-current="page">
            <div class="flex items-center">
                <i data-lucide="chevron-right" class="w-4 h-4 text-muted-foreground"></i>
                <span class="ml-1 text-sm font-bold text-foreground md:ml-2">{{ event.titre|length > 30 ? event.titre|slice(0, 30) ~ '...' : event.titre }}</span>
            </div>
        </li>
    </ol>
</nav>

{% for registration_id in app.flashes('registration_id') %}
    <div class="mb-8 p-6 bg-green-50 border border-green-100 rounded-3xl flex flex-col md:flex-row items-center justify-between gap-6 shadow-sm">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-2xl bg-green-500/10 text-green-600 flex items-center justify-center flex-shrink-0">
                <i data-lucide="check-circle" class="w-6 h-6"></i>
            </div>
            <div>
                <h4 class="font-bold text-green-900">Inscription Réussie !</h4>
                <p class="text-xs text-green-700">Votre place est réservée. Téléchargez votre ticket ci-dessous.</p>
            </div>
        </div>
        <a href="{{ path('app_front_registration_ticket', {id: registration_id}) }}" class="flex items-center gap-2 px-6 py-3 bg-green-600 text-white rounded-2xl font-bold hover:bg-green-700 transition-all shadow-lg shadow-green-600/20 active:scale-95">
            <i data-lucide="download" class="w-5 h-5"></i>
            Télécharger mon Ticket (PDF)
        </a>
    </div>
{% endfor %}

<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-8 space-y-8">
        <div class="bg-white rounded-2xl shadow-sm border border-border overflow-hidden">
            {% if event.image %}
                <div class="h-96 w-full">
                    <img src="{{ event.image }}" class="w-full h-full object-cover" alt="{{ event.titre }}">
                </div>
            {% endif %}
            
            <div class="p-8">
                <span class="text-sm font-bold text-primary bg-primary/5 px-3 py-1.5 rounded-lg mb-6 inline-block">{{ event.categorie }}</span>
                <h1 class="text-4xl font-extrabold text-foreground mb-8">{{ event.titre }}</h1>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10 pb-8 border-b border-border">
                    <div class="flex items-center gap-4">
                        <div class="p-4 bg-primary/5 rounded-2xl text-primary">
                            <i data-lucide="calendar" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <p class="text-[10px] uppercase font-bold text-muted-foreground tracking-wider">Date & Heure</p>
                            <p class="font-bold text-foreground text-sm">{{ event.dateDebut|date('d F, Y @ H:i') }}</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="p-4 bg-primary/5 rounded-2xl text-primary">
                            <i data-lucide="map-pin" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <p class="text-[10px] uppercase font-bold text-muted-foreground tracking-wider">Lieu</p>
                            <p class="font-bold text-foreground text-sm line-clamp-1">{{ event.lieu }}</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="p-4 bg-primary/5 rounded-2xl text-primary">
                            <i data-lucide="ticket" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <p class="text-[10px] uppercase font-bold text-muted-foreground tracking-wider">Prix</p>
                            <p class="font-bold text-foreground text-sm">{{ event.prix > 0 ? event.prix ~ ' €' : 'Gratuit' }}</p>
                        </div>
                    </div>
                </div>

                <div class="prose prose-slate max-w-none mb-10">
                    <h3 class="text-2xl font-bold mb-4">À propos de cet événement</h3>
                    <p class="text-muted-foreground leading-relaxed whitespace-pre-line">{{ event.description }}</p>
                </div>

                {% if event.latitude and event.longitude %}
                    <div class="space-y-4">
                        <h3 class="text-2xl font-bold mb-4 flex items-center gap-2">
                            <i data-lucide="map" class="w-6 h-6"></i>
                            Emplacement
                        </h3>
                        <div id="eventMap" class="w-full h-80 rounded-2xl border border-border"></div>
                        <div class="flex items-center gap-2 text-sm text-muted-foreground bg-muted/30 p-4 rounded-xl">
                            <i data-lucide="info" class="w-4 h-4"></i>
                            <span>Coordonnées: {{ event.latitude|round(4) }}, {{ event.longitude|round(4) }}</span>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Sidebar / Registration -->
    <div class="lg:col-span-4 space-y-6">
        <div class="bg-white rounded-2xl shadow-sm border border-border p-8 sticky top-8">
            <h3 class="text-xl font-bold text-foreground mb-6 flex items-center gap-2">
                <i data-lucide="user-plus" class="w-5 h-5 text-primary"></i>
                Inscription
            </h3>

            <div class="space-y-6 mb-8">
                <div class="flex justify-between items-center text-sm">
                    <span class="text-muted-foreground font-medium">Capacité totale</span>
                    <span class="font-bold text-foreground">{{ event.capacite }} places</span>
                </div>
                
                {% set availability = event.capacite - event.inscrits %}
                <div class="flex justify-between items-center text-sm">
                    <span class="text-muted-foreground font-medium">Disponibilité</span>
                    <span class="font-bold {{ availability > 0 ? 'text-green-600' : 'text-red-500' }}">
                        {{ availability > 0 ? availability ~ ' restantes' : 'Complet' }}
                    </span>
                </div>

                <div class="space-y-2">
                    {% set progress = (event.inscrits / event.capacite * 100)|round %}
                    <div class="flex justify-between text-[10px] items-center font-bold px-1">
                        <span class="text-muted-foreground uppercase">Taux de remplissage</span>
                        <span class="text-primary">{{ progress }}%</span>
                    </div>
                    <div class="h-3 bg-muted rounded-full overflow-hidden">
                        <div class="h-full bg-primary transition-all duration-700 w-[{{ progress }}%]"></div>
                    </div>
                </div>
            </div>

            {% if event.inscrits < event.capacite %}
                <button onclick="showRegistrationForm()" class="block w-full py-4 bg-primary text-white text-center rounded-2xl font-bold shadow-lg shadow-primary/20 hover:bg-primary/90 transform transition-all active:scale-95">
                    S'inscrire maintenant
                </button>
            {% else %}
                <button class="w-full py-4 bg-muted text-muted-foreground rounded-2xl font-bold cursor-not-allowed" disabled>
                    Événement complet
                </button>
            {% endif %}
            
            <p class="text-center text-[11px] text-muted-foreground mt-4 px-4 leading-tight">
                <i data-lucide="shield-check" class="w-3 h-3 inline mr-1 opacity-70"></i>
                Inscription sécurisée. Une confirmation vous sera envoyée par email.
            </p>

            {% if event.sponsors|length > 0 %}
                <div class="mt-10 pt-8 border-t border-border">
                    <h4 class="text-xs font-bold text-muted-foreground uppercase tracking-widest mb-4">Sponsors de l'événement</h4>
                    <div class="flex flex-wrap gap-2">
                        {% for sponsor in event.sponsors %}
                            <span class="px-3 py-1 bg-muted/50 text-muted-foreground rounded-lg text-xs font-semibold border border-border/50">{{ sponsor.nom }}</span>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Registration Form (Hidden by default) -->
        <div id="registrationForm" class="bg-white rounded-2xl shadow-sm border border-border p-8" style="display: none;">
            <h3 class="text-xl font-bold text-foreground mb-6 flex items-center gap-2">
                <i data-lucide="clipboard-list" class="w-5 h-5 text-primary"></i>
                Formulaire d'inscription
            </h3>
            
            <form action="{{ path('app_front_event_register', {id: event.id}) }}" method="post" class="space-y-6">
                <div class="space-y-4">
                    <div>
                        <label for="registration_visitorName" class="block text-sm font-bold text-foreground mb-2">Nom complet</label>
                        <input type="text" id="registration_visitorName" name="registration[visitorName]" required class="w-full px-4 py-3 border border-border rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                    </div>

                    <div>
                        <label for="registration_visitorEmail" class="block text-sm font-bold text-foreground mb-2">Email</label>
                        <input type="email" id="registration_visitorEmail" name="registration[visitorEmail]" required class="w-full px-4 py-3 border border-border rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                    </div>

                    {% if event.prix > 0 %}
                        <div>
                            <label for="registration_modePaiement" class="block text-sm font-bold text-foreground mb-2">Mode de paiement</label>
                            <select id="registration_modePaiement" name="registration[modePaiement]" required class="w-full px-4 py-3 border border-border rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                                <option value="">Sélectionnez...</option>
                                <option value="gratuit">Gratuit</option>
                                <option value="carte">Carte Bancaire</option>
                                <option value="espèces">Espèces</option>
                                <option value="virement">Virement</option>
                                <option value="paypal">PayPal</option>
                            </select>
                        </div>

                        <div>
                            <label for="registration_montantPaye" class="block text-sm font-bold text-foreground mb-2">Montant à payer</label>
                            <input type="number" step="0.01" id="registration_montantPaye" name="registration[montantPaye]" value="{{ event.prix }}" required class="w-full px-4 py-3 border border-border rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                        </div>
                    {% endif %}

                    <div>
                        <label for="registration_notes" class="block text-sm font-bold text-foreground mb-2">Notes (optionnel)</label>
                        <textarea id="registration_notes" name="registration[notes]" rows="3" class="w-full px-4 py-3 border border-border rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all"></textarea>
                    </div>

                    <input type="hidden" name="registration[evenement]" value="{{ event.id }}">
                    <input type="hidden" name="registration[_token]" value="{{ csrf_token('registration') }}">
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="submit" class="flex-1 py-4 bg-primary text-white text-center rounded-2xl font-bold shadow-lg shadow-primary/20 hover:bg-primary/90 transform transition-all active:scale-95">
                        <i data-lucide="check" class="w-5 h-5 inline mr-2"></i>
                        Confirmer l'inscription
                    </button>
                    <button type="button" onclick="hideRegistrationForm()" class="px-6 py-4 bg-muted text-muted-foreground text-center rounded-2xl font-bold hover:bg-muted/80 transition-all">
                        Annuler
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" />
    <script>
        function showRegistrationForm() {
            const form = document.getElementById('registrationForm');
            form.style.display = 'block';
            form.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            setTimeout(() => lucide.createIcons(), 100);
        }

        function hideRegistrationForm() {
            document.getElementById('registrationForm').style.display = 'none';
        }

        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
            {% if event.latitude and event.longitude %}
                const lat = {{ event.latitude }};
                const lng = {{ event.longitude }};
                const eventMap = L.map('eventMap').setView([lat, lng], 13);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(eventMap);
                L.marker([lat, lng], {
                    icon: L.icon({
                        iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-red.png',
                        iconSize: [25, 41],
                        iconAnchor: [12, 41]
                    })
                }).addTo(eventMap)
                    .bindPopup(`<b>{{ event.titre }}</b><br>{{ event.lieu }}`)
                    .openPopup();
            {% endif %}
        });
    </script>
{% endblock %}
