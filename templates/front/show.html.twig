{% extends 'front/base_front.html.twig' %}

{% block title %}{{ event.titre }} - EventHub{% endblock %}

{% block body %}
    <div class="bg-light py-5">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_front_home') }}">Events</a></li>
                    <li class="breadcrumb-item active">{{ event.titre }}</li>
                </ol>
            </nav>

            <div class="row g-5">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        {% if event.image %}
                            <img src="{{ event.image }}" class="card-img-top" alt="{{ event.titre }}" style="max-height: 400px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body p-4 p-md-5">
                            <span class="badge bg-primary-subtle text-primary mb-3">{{ event.categorie }}</span>
                            <h1 class="fw-bold mb-4">{{ event.titre }}</h1>
                            
                            <div class="d-flex flex-wrap gap-4 mb-5 border-bottom pb-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                                        <i class="far fa-calendar-alt text-primary fa-lg"></i>
                                    </div>
                                    <div>
                                        <div class="small text-muted text-uppercase fw-bold">Date & Time</div>
                                        <div class="fw-bold">{{ event.dateDebut|date('F d, Y @ H:i') }}</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                                        <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                    </div>
                                    <div>
                                        <div class="small text-muted text-uppercase fw-bold">Location</div>
                                        <div class="fw-bold">{{ event.lieu }}</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                                        <i class="fas fa-ticket-alt text-primary fa-lg"></i>
                                    </div>
                                    <div>
                                        <div class="small text-muted text-uppercase fw-bold">Price</div>
                                        <div class="fw-bold">{{ event.prix > 0 ? event.prix ~ ' â‚¬' : 'Free Entry' }}</div>
                                    </div>
                                </div>
                            </div>

                            <h4 class="fw-bold mb-3">About this event</h4>
                            <div class="text-muted lh-lg mb-5">
                                {{ event.description|nl2br }}
                            </div>

                            {% if event.latitude and event.longitude %}
                                <h4 class="fw-bold mb-3">Event Location Map</h4>
                                <div id="eventMap" style="width: 100%; height: 300px; border-radius: 10px; margin-bottom: 20px;"></div>
                                <div class="alert alert-info mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Coordinates:</strong> {{ event.latitude|round(4) }}, {{ event.longitude|round(4) }}
                                </div>
                            {% endif %}

                            {% if event.sponsors|length > 0 %}
                                <h5 class="fw-bold mb-3">Sponsors</h5>
                                <div class="d-flex flex-wrap gap-3">
                                    {% for sponsor in event.sponsors %}
                                        <span class="badge bg-light text-dark border p-2">{{ sponsor.nom }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 100px;">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-4">Registration</h5>
                            
                            <div class="mb-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Capacity</span>
                                    <span class="fw-bold">{{ event.capacite }} seats</span>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="text-muted">Availability</span>
                                    <span class="{{ event.inscrits >= event.capacite ? 'text-danger' : 'text-success' }} fw-bold">
                                        {{ event.capacite - event.inscrits }} left
                                    </span>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar" role="progressbar" style="width: {{ (event.inscrits / event.capacite * 100)|round }}%"></div>
                                </div>
                            </div>

                            {% if event.inscrits < event.capacite %}
                                <a href="{{ path('app_front_event_register', {id: event.id}) }}" class="btn btn-primary w-100 py-3 fw-bold">
                                    Register Now
                                </a>
                            {% else %}
                                <button class="btn btn-secondary w-100 py-3 fw-bold" disabled>
                                    Fully Booked
                                </button>
                            {% endif %}
                            
                            <p class="text-center text-muted small mt-3 px-3">
                                <i class="fas fa-shield-alt me-1"></i> Secure registration. No hidden fees.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            {% if event.latitude and event.longitude %}
                const lat = {{ event.latitude }};
                const lng = {{ event.longitude }};
                const eventMap = L.map('eventMap').setView([lat, lng], 13);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(eventMap);
                L.marker([lat, lng]).addTo(eventMap)
                    .bindPopup(`<b>{{ event.titre }}</b><br>{{ event.lieu }}`)
                    .openPopup();
            {% endif %}
        });
    </script>
{% endblock %}
