{% extends 'front/base_front.html.twig' %}

{% block title %}Catégories d'apprentissage{% endblock %}

{% block body %}
<div class="p-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-foreground">Catégories d'Apprentissage</h1>
            <p class="text-muted-foreground mt-2">Explorez nos modules par thématique</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for categorie in categories %}
            <div class="bg-card border border-border rounded-2xl p-6 hover:shadow-lg transition-all group">
                <div class="w-14 h-14 rounded-xl bg-primary/10 text-primary flex items-center justify-center mb-4 group-hover:bg-primary group-hover:text-white transition-colors">
                    <i data-lucide="folder" class="w-8 h-8"></i>
                </div>
                <h3 class="text-xl font-bold mb-2">{{ categorie.nom }}</h3>
                <p class="text-muted-foreground text-sm line-clamp-2 mb-6">{{ categorie.description }}</p>
                
                <div class="flex items-center justify-between mt-auto pt-4 border-t border-border">
                    <span class="text-xs font-semibold uppercase tracking-wider text-muted-foreground">
                        {{ categorie.modules|length }} Modules
                    </span>
                    <div class="flex gap-2">
                        {% for module in categorie.modules|slice(0, 3) %}
                             <span class="w-6 h-6 rounded-full bg-muted border border-border flex items-center justify-center text-[10px] font-bold" title="{{ module.titre }}">
                                {{ module.titre|slice(0,1)|upper }}
                             </span>
                        {% endfor %}
                    </div>
                </div>
                
                <a href="{{ path('app_categorie_show', {id: categorie.id}) }}" class="mt-6 w-full py-3 bg-secondary text-secondary-foreground rounded-xl font-bold hover:bg-primary hover:text-white transition-all flex items-center justify-center gap-2">
                    Voir les modules
                    <i data-lucide="arrow-right" class="w-4 h-4"></i>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
