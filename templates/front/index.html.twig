{% extends 'front/base_front.html.twig' %}

{% block body %}
    <header class="hero-section">
        <div class="container text-center">
            <h1 class="hero-title animate__animated animate__fadeInUp">Unforgettable Experiences,<br>Seamlessly Managed.</h1>
            <p class="lead text-muted mb-5 animate__animated animate__fadeInUp animate__delay-1s">Browse our curated list of events and secure your spot today.</p>
            <a href="#events" class="btn btn-primary btn-lg shadow animate__animated animate__fadeInUp animate__delay-2s">Explore Events</a>
        </div>
    </header>

    <section id="events" class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <span class="text-primary fw-bold text-uppercase">What's Next</span>
                <h2 class="fw-bold">Upcoming Events</h2>
            </div>

            <!-- Events Map Section -->
            {% if events|length > 0 and events|first.latitude and events|first.longitude %}
            <div class="mb-5">
                <div class="card shadow-sm">
                    <div class="card-body p-0" style="border-radius: 0.375rem;">
                        <div id="eventsMap" style="width: 100%; height: 400px; border-radius: 0.375rem;"></div>
                    </div>
                </div>
                <p class="text-muted text-center mt-3">
                    <i class="fas fa-info-circle me-2"></i>
                    Click on event markers to view more details
                </p>
            </div>
            {% endif %}

            <div class="row g-4">
                {% for event in events %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100">
                            {% if event.image %}
                                <img src="{{ event.image }}" class="card-img-top" alt="{{ event.titre }}" style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-primary"></i>
                                </div>
                            {% endif %}
                            <div class="card-body">
                                <span class="badge bg-primary-subtle text-primary mb-2">{{ event.categorie }}</span>
                                <h5 class="card-title fw-bold">{{ event.titre }}</h5>
                                <p class="card-text text-muted small">{{ event.description|length > 100 ? event.description|slice(0, 100) ~ '...' : event.description }}</p>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="far fa-calendar-alt text-primary me-2"></i>
                                    <span class="small">{{ event.dateDebut|date('M d, Y') }}</span>
                                    <i class="fas fa-map-marker-alt text-primary ms-3 me-2"></i>
                                    <span class="small">{{ event.lieu }}</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <span class="fw-bold text-primary">{{ event.prix > 0 ? event.prix ~ ' €' : 'FREE' }}</span>
                                    <a href="{{ path('app_front_event_show', {id: event.id}) }}" class="btn btn-outline-primary rounded-pill">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center py-5">
                        <p class="text-muted">No upcoming events found. Check back later!</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {% if sponsors %}
    <section class="py-5 bg-white border-top">
        <div class="container">
            <div class="text-center mb-5">
                <h3 class="fw-bold">Our Partners & Sponsors</h3>
            </div>
            <div class="row align-items-center justify-content-center g-5">
                {% for sponsor in sponsors %}
                    <div class="col-6 col-md-3 col-lg-2 text-center">
                        {% if sponsor.logo %}
                            <img src="{{ sponsor.logo }}" alt="{{ sponsor.nom }}" class="img-fluid grayscale filter-blur-sm" style="max-height: 50px; opacity: 0.6;">
                        {% else %}
                            <span class="fw-bold text-muted">{{ sponsor.nom }}</span>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" />
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Only initialize map if there are events with coordinates
        {% if events|length > 0 and events|first.latitude and events|first.longitude %}
            
            // Initialize map
            const map = L.map('eventsMap').setView([51.505, -0.09], 13);

            // Add tile layer
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
                maxZoom: 19
            }).addTo(map);

            // Add event markers
            {% for event in events %}
                {% if event.latitude and event.longitude %}
                    const eventLat{{ event.id }} = {{ event.latitude }};
                    const eventLng{{ event.id }} = {{ event.longitude }};
                    
                    const marker{{ event.id }} = L.marker([eventLat{{ event.id }}, eventLng{{ event.id }}], {
                        icon: L.icon({
                            iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-red.png',
                            iconSize: [25, 41],
                            iconAnchor: [12, 41],
                            popupAnchor: [1, -34],
                            shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                            shadowSize: [41, 41]
                        })
                    }).addTo(map)
                        .bindPopup(`
                            <div style="min-width: 250px;">
                                <h6 class="mb-2"><strong>{{ event.titre }}</strong></h6>
                                <p class="mb-1"><small><i class="fas fa-map-marker-alt"></i> {{ event.lieu }}</small></p>
                                <p class="mb-1"><small><i class="fas fa-calendar-alt"></i> {{ event.dateDebut|date('M d, Y H:i') }}</small></p>
                                <p class="mb-2"><small><i class="fas fa-tag"></i> {{ event.categorie }}</small></p>
                                {% if event.prix > 0 %}
                                    <p class="mb-2"><strong class="text-primary">{{ event.prix }}€</strong></p>
                                {% else %}
                                    <p class="mb-2"><strong class="text-success">FREE</strong></p>
                                {% endif %}
                                <a href="{{ path('app_front_event_show', {id: event.id}) }}" class="btn btn-sm btn-primary">View Details</a>
                            </div>
                        `);
                {% endif %}
            {% endfor %}

            // Fit map to show all markers
            {% if events|length > 1 %}
                const group = new L.featureGroup([
                    {% for event in events %}
                        {% if event.latitude and event.longitude %}
                            marker{{ event.id }}{{ not loop.last ? ',' : '' }}
                        {% endif %}
                    {% endfor %}
                ]);
                map.fitBounds(group.getBounds().pad(0.1));
            {% else %}
                {% for event in events %}
                    {% if event.latitude and event.longitude %}
                        map.setView([{{ event.latitude }}, {{ event.longitude }}], 13);
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endif %}
    });
    </script>
{% endblock %}
