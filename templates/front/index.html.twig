{% extends 'front/base_front.html.twig' %}

{% block body %}
    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-primary to-secondary rounded-2xl p-8 text-white shadow-xl relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl"></div>
        <div class="relative z-10">
            <h1 class="text-3xl font-bold mb-2">Bienvenue sur Naja7ni! üëã</h1>
            <p class="text-white/90 text-lg">D√©couvrez des √©v√©nements exceptionnels et g√©rez vos participations.</p>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-border hover:border-primary/50 transition-colors group">
            <div class="flex items-center justify-between mb-4">
                <div class="p-3 bg-primary/10 rounded-xl group-hover:bg-primary/20 transition-colors">
                    <i data-lucide="calendar" class="w-6 h-6 text-primary"></i>
                </div>
                <span class="text-3xl font-bold text-foreground">{{ events|length }}</span>
            </div>
            <p class="text-sm font-medium text-muted-foreground">√âv√©nements Actifs</p>
        </div>
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-border hover:border-secondary/50 transition-colors group">
            <div class="flex items-center justify-between mb-4">
                <div class="p-3 bg-secondary/10 rounded-xl group-hover:bg-secondary/20 transition-colors">
                    <i data-lucide="award" class="w-6 h-6 text-secondary"></i>
                </div>
                <span class="text-3xl font-bold text-foreground">{{ sponsors|length }}</span>
            </div>
            <p class="text-sm font-medium text-muted-foreground">Partenaires</p>
        </div>
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-border hover:border-accent/50 transition-colors group">
            <div class="flex items-center justify-between mb-4">
                <div class="p-3 bg-accent/10 rounded-xl group-hover:bg-accent/20 transition-colors">
                    <i data-lucide="users" class="w-6 h-6 text-accent"></i>
                </div>
                <span class="text-3xl font-bold text-foreground">1.2K+</span>
            </div>
            <p class="text-sm font-medium text-muted-foreground">Communaut√©</p>
        </div>
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-border hover:border-green-500/50 transition-colors group">
            <div class="flex items-center justify-between mb-4">
                <div class="p-3 bg-green-500/10 rounded-xl group-hover:bg-green-500/20 transition-colors">
                    <i data-lucide="zap" class="w-6 h-6 text-green-600"></i>
                </div>
                <span class="text-3xl font-bold text-foreground">Fast</span>
            </div>
            <p class="text-sm font-medium text-muted-foreground">Support 24/7</p>
        </div>
    </div>



    <!-- Events List -->
    <div>
        <h2 id="events" class="text-2xl font-bold mb-6 text-foreground">√âv√©nements Planifi√©s</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {% for event in events %}
                <div class="bg-white rounded-2xl shadow-sm border border-border overflow-hidden hover:shadow-md transition-all group cursor-pointer flex flex-col">
                    <div class="h-40 bg-muted relative overflow-hidden">
                        {% if event.image %}
                            <img src="{{ asset(event.image) }}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" alt="{{ event.titre }}">
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center bg-primary/5">
                                <i data-lucide="image" class="w-12 h-12 text-primary/20"></i>
                            </div>
                        {% endif %}
                        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                    </div>
                    <div class="p-6 flex-1 flex flex-col">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <span class="text-xs font-semibold text-primary bg-primary/5 px-2 py-1 rounded-md mb-2 inline-block">{{ event.categorie }}</span>
                                <h3 class="text-lg font-bold group-hover:text-primary transition-colors line-clamp-2">{{ event.titre }}</h3>
                            </div>
                        </div>
                        <p class="text-sm text-muted-foreground mb-4 flex-1 line-clamp-2">{{ event.description }}</p>
                        <div class="space-y-3 mb-6">
                            <div class="flex items-center gap-2 text-sm text-muted-foreground font-medium">
                                <i data-lucide="calendar" class="w-4 h-4"></i>
                                <span>{{ event.dateDebut|date('d M, Y') }}</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-muted-foreground font-medium">
                                <i data-lucide="map-pin" class="w-4 h-4"></i>
                                <span>{{ event.lieu }}</span>
                            </div>
                        </div>
                        <div class="flex items-center justify-between pt-4 border-t border-border">
                            <span class="font-bold text-primary">{{ event.prix > 0 ? event.prix ~ ' ‚Ç¨' : 'GRATUIT' }}</span>
                            <a href="{{ path('app_front_event_show', {id: event.id}) }}" class="px-4 py-2 bg-primary text-white rounded-xl text-sm font-semibold hover:bg-primary/90 transition-colors">
                                D√©tails
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-span-1 md:col-span-3 text-center py-12 bg-white rounded-2xl border border-dashed border-border">
                    <i data-lucide="calendar-off" class="w-12 h-12 text-muted-foreground mx-auto mb-4"></i>
                    <p class="text-muted-foreground">Aucun √©v√©nement planifi√© pour le moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Partners Section -->
    {% if sponsors %}
    <div class="bg-white rounded-2xl shadow-sm border border-border p-6">
        <h3 class="text-lg font-bold mb-6 flex items-center gap-2">
            <i data-lucide="award" class="w-5 h-5 text-secondary"></i>
            Nos Partenaires
        </h3>
        <div class="flex flex-wrap gap-8 items-center justify-center">
            {% for sponsor in sponsors %}
                <div>
                    {% if sponsor.logo %}
                        <img src="{{ sponsor.logo }}" alt="{{ sponsor.nom }}" class="h-12 grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all cursor-pointer">
                    {% else %}
                        <span class="font-bold text-muted-foreground">{{ sponsor.nom }}</span>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" />
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        lucide.createIcons();
        {% if events|length > 0 and events|first.latitude and events|first.longitude %}
            const map = L.map('eventsMap').setView([51.505, -0.09], 13);
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);

            const markers = [];
            {% for event in events %}
                {% if event.latitude and event.longitude %}
                    const marker = L.marker([{{ event.latitude }}, {{ event.longitude }}], {
                        icon: L.icon({
                            iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-red.png',
                            iconSize: [25, 41],
                            iconAnchor: [12, 41],
                            popupAnchor: [1, -34],
                            shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                            shadowSize: [41, 41]
                        })
                    }).addTo(map)
                    .bindPopup(`
                        <div class="p-2 min-w-[200px]">
                            <h6 class="font-bold text-foreground mb-1">{{ event.titre }}</h6>
                            <p class="text-xs text-muted-foreground mb-2">{{ event.lieu }}</p>
                            <a href="{{ path('app_front_event_show', {id: event.id}) }}" class="text-xs font-bold text-primary hover:underline">Voir l'√©v√©nement</a>
                        </div>
                    `);
                    markers.push(marker);
                {% endif %}
            {% endfor %}

            if (markers.length > 0) {
                const group = new L.featureGroup(markers);
                map.fitBounds(group.getBounds().pad(0.1));
            }
        {% endif %}
    });
    </script>
{% endblock %}
