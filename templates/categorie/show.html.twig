{% extends 'naja7ni/base.html.twig' %}

{% block title %}Naja7ni - {{ categorie.nom }}{% endblock %}

{% block body %}
    <div class="mb-8 flex items-start justify-between gap-6">
        <div>
            <div class="flex items-center gap-4 mb-2">
                <div class="w-12 h-12 bg-primary/10 text-primary rounded-xl flex items-center justify-center">
                    <i data-lucide="folder-open" class="w-6 h-6"></i>
                </div>
                <h1 class="text-3xl font-bold">{{ categorie.nom }} - Programme détaillé</h1>
            </div>
            <p class="text-muted-foreground">
                {{ categorie.description ? categorie.description : 'Sélectionnez un module pour voir ses cours.' }}
            </p>
        </div>

        <div class="flex items-center gap-3">
            <a href="{{ path('app_module_new') }}?categorie={{ categorie.id }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-primary text-white font-semibold shadow hover:shadow-md transition">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Ajouter un module
            </a>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white border border-border text-foreground font-semibold hover:bg-muted transition">
                <i data-lucide="pencil" class="w-4 h-4"></i>
                Modifier
            </a>
            {{ include('categorie/_delete_form.html.twig') }}
            <a href="{{ path('app_categorie_index') }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white border border-border text-foreground font-semibold hover:bg-muted transition">
                <i data-lucide="arrow-left" class="w-4 h-4"></i>
                Retour
            </a>
        </div>
    </div>

    <div class="space-y-8">
        <div class="flex items-center justify-end">
            {% set _sort = sort_modules|default('date_desc') %}
            {% set _sortLabel = _sort == 'alpha_asc' ? 'A → Z' : (_sort == 'alpha_desc' ? 'Z → A' : 'Date') %}
            <details class="relative">
                <summary class="list-none cursor-pointer inline-flex items-center gap-2 px-3 py-2 rounded-xl bg-white border border-border font-semibold hover:bg-muted transition">
                    Trier modules ({{ _sortLabel }})
                </summary>
                <div class="absolute right-0 mt-2 w-56 bg-white border border-border rounded-xl shadow-lg overflow-hidden z-20">
                    <a class="block px-4 py-2.5 text-sm hover:bg-muted/30 transition" href="{{ path('app_categorie_show', {'id': categorie.id, 'sort_modules': 'date_desc'}) }}">Date (récent)</a>
                    <a class="block px-4 py-2.5 text-sm hover:bg-muted/30 transition" href="{{ path('app_categorie_show', {'id': categorie.id, 'sort_modules': 'alpha_asc'}) }}">A → Z</a>
                    <a class="block px-4 py-2.5 text-sm hover:bg-muted/30 transition" href="{{ path('app_categorie_show', {'id': categorie.id, 'sort_modules': 'alpha_desc'}) }}">Z → A</a>
                </div>
            </details>
        </div>

        {% if modules|length > 0 %}
            {% for module in modules %}
                <section class="bg-white rounded-2xl shadow-sm border border-border p-8">
                    <div class="flex items-start justify-between gap-6 mb-6 pb-6 border-b border-border">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 bg-secondary/10 text-secondary rounded-xl flex items-center justify-center">
                                <i data-lucide="layers" class="w-6 h-6"></i>
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold">{{ module.titre }}</h2>
                                <p class="text-sm text-muted-foreground">
                                    {{ module.description ? module.description : 'Aucune description.' }}
                                </p>
                                <div class="mt-2 text-sm text-muted-foreground">
                                    <span class="font-semibold text-primary/80">{{ module.cours|length }} cours</span>
                                    {% if module.niveau %}<span> | {{ module.niveau }}</span>{% endif %}
                                    {% if module.duree %}<span> | {{ module.duree }}h</span>{% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2">
                            <a href="{{ path('app_module_show', {'id': module.id}) }}" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-muted hover:bg-muted/70 transition font-semibold">
                                <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                Voir le module
                            </a>
                        </div>
                    </div>

                    {% if module.cours|length > 0 %}
                        <ul class="space-y-3">
                            {% for cour in module.cours %}
                                {% set duree = cour.duree ?? 0 %}
                                {% set h = (duree // 60) %}
                                {% set m = (duree % 60) %}
                                <li class="flex items-center justify-between p-3 bg-muted/30 rounded-lg hover:bg-muted/60 transition-colors">
                                    <div class="flex items-center gap-3">
                                        <i data-lucide="play-circle" class="w-4 h-4 text-primary"></i>
                                        <span class="text-sm font-medium">{{ cour.titre }}</span>
                                    </div>
                                    <span class="text-xs text-muted-foreground bg-white px-2 py-1 rounded border border-border">
                                        {% if duree > 0 %}
                                            {% if h > 0 %}{{ h }}h{% endif %}{% if m > 0 %} {{ m }}min{% endif %}
                                            {% if h == 0 and m == 0 %}{{ duree }}min{% endif %}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="p-4 rounded-xl border border-border bg-muted/20 text-sm text-muted-foreground">
                            Aucun cours dans ce module.
                        </div>
                    {% endif %}
                </section>
            {% endfor %}
        {% else %}
            <div class="bg-white rounded-2xl shadow-sm border border-border p-8">
                <p class="text-muted-foreground">Aucun module dans cette catégorie.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
