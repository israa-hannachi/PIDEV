{% extends 'naja7ni/base.html.twig' %}

{% block title %}Naja7ni - Catégories{% endblock %}

{% block body %}
    <div class="mb-8 flex items-start justify-between gap-6">
        <div>
            <h1 class="text-3xl font-bold mb-2">Catégories de Cours</h1>
            <p class="text-muted-foreground">Sélectionnez une catégorie pour voir les modules et cours</p>
        </div>
        <div class="flex items-center gap-3">
            <a href="{{ path('app_categorie_new') }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-primary text-white font-semibold shadow hover:shadow-md transition">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Ajouter
            </a>
        </div>
    </div>

    {% set palette = [
        {'bg': 'bg-blue-500', 'icon': 'code'},
        {'bg': 'bg-purple-500', 'icon': 'palette'},
        {'bg': 'bg-emerald-500', 'icon': 'graduation-cap'},
        {'bg': 'bg-orange-500', 'icon': 'flame'},
        {'bg': 'bg-pink-500', 'icon': 'sparkles'},
        {'bg': 'bg-cyan-500', 'icon': 'rocket'}
    ] %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {% for categorie in categories %}
            {% set c = palette[(loop.index0) % (palette|length)] %}
            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="bg-white rounded-2xl shadow-sm border border-border p-6 hover:shadow-md transition-all cursor-pointer group hover:-translate-y-1">
                <div class="w-16 h-16 {{ c.bg }} rounded-2xl flex items-center justify-center text-white mb-4 group-hover:scale-110 transition-transform shadow-lg">
                    <i data-lucide="{{ c.icon }}" class="w-8 h-8"></i>
                </div>
                <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">{{ categorie.nom }}</h3>
                <p class="text-sm text-muted-foreground mb-4 leading-relaxed">
                    {{ categorie.description ? categorie.description|slice(0, 120) : 'Aucune description.' }}
                    {% if categorie.description and categorie.description|length > 120 %}...{% endif %}
                </p>
                <div class="flex items-center justify-between pt-4 border-t border-border/50">
                    <span class="text-sm font-semibold text-primary/80">{{ categorie.modules|length }} modules</span>
                    <i data-lucide="chevron-right" class="w-5 h-5 text-muted-foreground group-hover:text-primary group-hover:translate-x-1 transition-all"></i>
                </div>
            </a>
        {% else %}
            <div class="bg-white rounded-2xl shadow-sm border border-border p-6">
                <p class="text-muted-foreground">Aucune catégorie trouvée.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
