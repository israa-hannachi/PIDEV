<script>
    // Sidebar toggle avec animation de glissement fluide
    document.addEventListener('DOMContentLoaded', function() {
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const mobileCollapse = document.getElementById('mobile-collapse');
        const sidebar = document.querySelector('.nxl-navigation');
        const mainContent = document.querySelector('main#main-content');
        
        if (sidebarToggle && sidebar) {
            // Force initial state - sidebar open
            sidebar.classList.remove('collapsed');
            sidebarToggle.classList.remove('collapsed');
            
            // Update main content margin for open sidebar
            if (mainContent) {
                mainContent.style.marginLeft = '340px';
                mainContent.style.width = 'calc(100% - 340px)';
            }
            
            // Toggle function avec animation de glissement
            function toggleSidebar() {
                const isCollapsed = sidebar.classList.contains('collapsed');
                
                if (isCollapsed) {
                    // Open sidebar - glissement vers la droite
                    sidebar.classList.remove('collapsed');
                    sidebarToggle.classList.remove('collapsed');
                    if (mainContent) {
                        mainContent.style.marginLeft = '340px';
                        mainContent.style.width = 'calc(100% - 340px)';
                    }
                } else {
                    // Close sidebar - glissement vers la gauche
                    sidebar.classList.add('collapsed');
                    sidebarToggle.classList.add('collapsed');
                    if (mainContent) {
                        mainContent.style.marginLeft = '90px';
                        mainContent.style.width = 'calc(100% - 90px)';
                    }
                }
                
                // Save state
                localStorage.setItem('sidebarCollapsed', !isCollapsed);
            }
            
            // Event listeners
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                toggleSidebar();
            });
            
            if (mobileCollapse) {
                mobileCollapse.addEventListener('click', function(e) {
                    e.preventDefault();
                    toggleSidebar();
                });
            }
        }
    });
</script>
