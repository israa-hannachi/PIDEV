{% extends 'naja7ni/base.html.twig' %}

{% block title %}Naja7ni - Nouveau module{% endblock %}

{% block body %}
    <div class="mb-8 flex items-start justify-between gap-6">
        <div>
            <div class="flex items-center gap-4 mb-2">
                <div class="w-12 h-12 bg-secondary/10 text-secondary rounded-xl flex items-center justify-center">
                    <i data-lucide="layers" class="w-6 h-6"></i>
                </div>
                <h1 class="text-3xl font-bold">Nouveau module</h1>
            </div>
            <p class="text-muted-foreground">Créer un module dans la catégorie <span class="font-semibold">{{ module.categorie.nom }}</span>.</p>
        </div>

        <a href="{{ path('app_categorie_show', {'id': module.categorie.id}) }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white border border-border text-foreground font-semibold hover:bg-muted transition">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Retour à la catégorie
        </a>
    </div>

    {{ include('module/_form.html.twig', {'button_label': 'Créer'}) }}
{% endblock %}
