                    <td>Débutant</td>
                    <td>100</td>
                    <td>30 min</td>
                    <td>3</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-info">
                            <i class="bi bi-eye"></i>
                        </button>
                    </td>
                </tr>
                <tr>
                    <td>Jeu de Mémoire</td>
                    <td>Mémoire</td>
                    <td>Intermédiaire</td>
                    <td>150</td>
                    <td>45 min</td>
