{% extends 'backoffice/layout.html.twig' %}

{% block page_title %}Liste des Jeux{% endblock %}

{% block content %}
<div class="action-buttons">
    <button class="btn btn-primary btn-action">
        <i class="bi bi-plus-circle"></i> NOUVEAU JEU
    </button>
    <button class="btn btn-success btn-action">
        <i class="bi bi-file-pdf"></i> EXPORTER EN PDF
    </button>
    <button class="btn btn-success btn-action">
        <i class="bi bi-file-excel"></i> EXPORTER EN EXCEL
    </button>
    <button class="btn btn-success btn-action">
        <i class="bi bi-file-csv"></i> EXPORTER EN CSV
    </button>
</div>

<div class="table-container">
    <h3 class="mb-4">Liste des Jeux</h3>
    
