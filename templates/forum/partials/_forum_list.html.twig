<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Créé par</th>
            <th>Date de création</th>
            <th>État</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for forum in forums %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ forum.titre }}</td>
                <td>{{ forum.createdBy }}</td>
                <td>{{ forum.createdAt|date('d/m/Y H:i') }}</td>
                <td>
                    {% if forum.isBlocked %}
                        <span class="badge bg-danger">Bloqué</span>
                    {% else %}
                        <span class="badge bg-success">Actif</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        {# Ajouter #}
                        <a href="{{ path('forum_new') }}" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Ajouter
                        </a>

                        {# Modifier #}
                        <a href="{{ path('forum_edit', {'id': forum.id}) }}" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>

                        {# Supprimer #}
                        <form method="post" action="{{ path('forum_delete', {'id': forum.id}) }}" 
                              onsubmit="return confirm('Voulez-vous vraiment supprimer ce forum ?');" 
                              style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
                            <button class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </button>
                        </form>

                        {# Bloquer / Débloquer selon l'état #}
                        {% if forum.isBlocked %}
                            <a href="{{ path('forum_unblock', {'id': forum.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-unlock"></i> Débloquer
                            </a>
                        {% else %}
                            <a href="{{ path('forum_block', {'id': forum.id}) }}" class="btn btn-dark btn-sm">
                                <i class="fas fa-ban"></i> Bloquer
                            </a>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun forum trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
