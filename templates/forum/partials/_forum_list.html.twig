<table class="table table-striped table-hover compact-table" style="font-size: 1rem; line-height: 1.5;">
    <thead class="table-dark">
        <tr>
            <th style="width: 50px;">#</th>
            <th>Titre</th>
            <th>Créateur</th>
            <th style="width: 150px;">Date</th>
            <th style="width: 80px;">État</th>
            <th class="text-center" style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for forum in forums %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>
                    <a href="{{ path('forum_show', {'forumId': forum.id}) }}">
                        {{ forum.titre }}
                    </a>
                </td>

                <td>{{ forum.createdBy }}</td>
                <td>{{ forum.createdAt|date('d/m/Y H:i') }}</td>
                <td>
                    {% if forum.isBlocked %}
                        <span class="badge bg-danger" style="font-size: 14px; padding: 6px 10px;">Bloqué</span>
                    {% else %}
                        <span class="badge bg-success" style="font-size: 14px; padding: 6px 10px;">Actif</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a href="{{ path('forum_new') }}" class="btn btn-success" style="font-size: 14px; padding: 8px 12px;">Ajouter</a>
                        <a href="{{ path('forum_edit', {'id': forum.id}) }}" class="btn btn-warning" style="font-size: 14px; padding: 8px 12px;">Modifier</a>
                        <form method="post" action="{{ path('forum_delete', {'id': forum.id }) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce forum ?');" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
                            <button class="btn btn-danger" style="font-size: 14px; padding: 8px 12px;">Supprimer</button>
                        </form>
                        {% if forum.isBlocked %}
                            <a href="{{ path('forum_unblock', {'id': forum.id}) }}" class="btn btn-info" style="font-size: 14px; padding: 8px 12px;">Débloquer</a>
                        {% else %}
                            <a href="{{ path('forum_block', {'id': forum.id}) }}" class="btn btn-dark" style="font-size: 14px; padding: 8px 12px;">Bloquer</a>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun forum trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
